<!-- Error/Success Message Display -->
{% if message %}
  <div class="message message--{{ type }}">
    <span class="message__content">{{ message }}</span>
    <button class="message__close" onclick="this.parentElement.style.display='none';">Ã—</button>
  </div>
{% endif %}

<style>
.message {
  padding: 1rem;
  border-radius: 4px;
  margin-bottom: 1rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  animation: slideDown 0.3s ease;
}

.message--success {
  background: #d4edda;
  color: #155724;
  border: 1px solid #c3e6cb;
}

.message--error {
  background: #f8d7da;
  color: #721c24;
  border: 1px solid #f5c6cb;
}

.message--info {
  background: #d1ecf1;
  color: #0c5460;
  border: 1px solid #bee5eb;
}

.message--warning {
  background: #fff3cd;
  color: #856404;
  border: 1px solid #ffeeba;
}

.message__close {
  background: none;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  opacity: 0.5;
  transition: opacity 0.2s;
}

.message__close:hover {
  opacity: 1;
}

@keyframes slideDown {
  from {
    transform: translateY(-10px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}
</style>
