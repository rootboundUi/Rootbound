  margin-bottom: 0.75rem;
  font-weight: 600;
}

.product-card__price-original {
  text-decoration: line-through;
  color: #999;
  font-size: 0.875rem;
}

.product-card__price {
  color: var(--color-text);
  font-size: 1rem;
}

.product-card__variants {
  margin-bottom: 1rem;
  flex: 1;
}

.variant-label {
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  margin: 0 0 0.5rem 0;
  color: #666;
}

.variant-options {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.variant-option {
  font-size: 0.75rem;
  padding: 0.25rem 0.5rem;
  background: var(--color-light-bg);
