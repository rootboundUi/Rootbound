<article class="product-card" data-product-id="{{ product.id }}">
  <div class="product-card__image-wrapper">
    {% if product.featured_image %}
      <img 
        src="{{ product.featured_image | image_url: width: 500 }}"
        alt="{{ product.featured_image.alt | escape }}"
        loading="lazy"
        class="product-card__image"
      >
    {% endif %}
    
    {% if product.variants.size > 1 %}
      <span class="product-card__badge">{{ product.variants.size }} Options</span>
    {% endif %}

    {% if product.compare_at_price > product.price %}
      <span class="product-card__sale-badge">Sale</span>
    {% endif %}
  </div>

  <div class="product-card__content">
    <p class="product-card__vendor">{{ product.vendor }}</p>
    
    <h3 class="product-card__title">
      <a href="{{ product.url }}">{{ product.title }}</a>
    </h3>

    <div class="product-card__rating">
      {% if product.metafields.reviews.rating %}
        <div class="stars" data-rating="{{ product.metafields.reviews.rating.value }}">
          {% for i in (1..5) %}
            <span class="star">â˜…</span>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <div class="product-card__prices">
      {% if product.compare_at_price > product.price %}
        <span class="product-card__price-original">
          {{ product.compare_at_price | money }}
        </span>
      {% endif %}
      <span class="product-card__price">
        {{ product.price | money }}
      </span>
    </div>

    <div class="product-card__variants">
      {% for option in product.options_with_values limit: 1 %}
        <p class="variant-label">{{ option.name }}:</p>
        <div class="variant-options">
          {% for value in option.values limit: 3 %}
            <span class="variant-option">{{ value }}</span>
          {% endfor %}
          {% if option.values.size > 3 %}
            <span class="variant-option">+{{ option.values.size | minus: 3 }} more</span>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <a href="{{ product.url }}" class="button button--small">View Product</a>
  </div>
</article>

<style>
