<header class="header" role="banner">
  <div class="header__container">

    <!-- Logo -->
    <div class="header__logo">
      {% if section.settings.logo %}
        <a href="{{ '/' | url }}" class="logo-link">
          <img 
            src="{{ section.settings.logo | image_url: width: 200 }}" 
            alt="{{ shop.name }}"
            width="{{ section.settings.logo_width }}"
            class="logo-image"
          >
        </a>
      {% else %}
        <a href="{{ '/' | url }}" class="logo-link">
          <span class="logo-text">{{ shop.name }}</span>
        </a>
      {% endif %}
    </div>

    <!-- Desktop Navigation -->
    <nav class="header__menu" role="navigation">
      {% if settings.menu_main != blank %}
        <ul class="menu-list">
          {% for link in linklists[settings.menu_main].links %}
            <li class="menu-item">
              <a href="{{ link.url }}" class="menu-link">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </nav>

    <!-- Right Actions -->
    <div class="header__actions">

      <!-- Search Trigger -->
      <button class="header__icon-button search-trigger" aria-label="Search">
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
      </button>

      <!-- Account -->
      <a href="{{ routes.account_url }}" class="header__icon-button" aria-label="Account">
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="7" r="4"></circle>
          <path d="M5.5 21a6.5 6.5 0 0 1 13 0"></path>
        </svg>
      </a>

      <!-- Cart -->
      <a href="{{ routes.cart_url }}" class="header__icon-button cart-icon" aria-label="Cart">
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="9" cy="21" r="1"></circle>
          <circle cx="20" cy="21" r="1"></circle>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
        </svg>
        <span class="cart-count" data-cart-count="0">0</span>
      </a>

    </div>
  </div>

  <!-- Modern Search Bar -->
  <div class="search-bar">
    <div class="search-bar__inner">
      <form action="{{ routes.search_url }}" method="get" role="search">
        <input type="search" 
               name="q" 
               placeholder="Search products..." 
               class="search-input"
               autocomplete="off">
      </form>

      <button class="search-close" aria-label="Close">
        ✕
      </button>
    </div>
  </div>

</header>
<script>
document.addEventListener("DOMContentLoaded", function() {

  const trigger = document.querySelector(".search-trigger");
  const header = document.querySelector(".header");

  if (!trigger) return;

  /* Remove Shopify predictive search elements */
  const predictive = document.querySelector("predictive-search");
  if (predictive) predictive.remove();

  const modal = document.querySelector(".search-modal");
  if (modal) modal.remove();

  /* Create inline search only once */
  let searchBar = document.querySelector(".inline-search");

  if (!searchBar) {
    searchBar = document.createElement("div");
    searchBar.className = "inline-search";
    searchBar.innerHTML = `
      <form action="/search" method="get" class="inline-search-form">
        <input type="search" name="q" placeholder="Search products..." class="inline-search-input" autocomplete="off">
        <button type="button" class="inline-search-close">✕</button>
      </form>
    `;
    header.appendChild(searchBar);
  }

  const input = searchBar.querySelector(".inline-search-input");
  const closeBtn = searchBar.querySelector(".inline-search-close");

  /* STOP default behavior */
  trigger.addEventListener("click", function(e) {
    e.preventDefault();
    e.stopPropagation();
    searchBar.classList.add("active");
    input.focus();
  });

  closeBtn.addEventListener("click", function() {
    searchBar.classList.remove("active");
  });

  /* Close if clicked outside */
  document.addEventListener("click", function(e) {
    if (!searchBar.contains(e.target) && !trigger.contains(e.target)) {
      searchBar.classList.remove("active");
    }
  });

});
</script>


{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo Width",
      "min": 50,
      "max": 300,
      "step": 10,
      "unit": "px",
      "default": 120
    }
  ]
}
{% endschema %}

