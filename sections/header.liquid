/* ============================= */
/* HEADER BASE */
/* ============================= */

.header {
  position: sticky;
  top: 0;
  z-index: 50;
  border-bottom: 1px solid rgba(0,0,0,0.05);

  background: linear-gradient(
    120deg,
    #ffe5d4,
    #fff1e8,
    #ffffff,
    #fff1e8,
    #ffe5d4
  );

  background-size: 200% 200%;
  animation: peachFlow 12s ease-in-out infinite;
}

@keyframes peachFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.header__container {
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 1.5rem;
  height: 70px;

  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
}

/* ============================= */
/* LOGO CENTER */
/* ============================= */

.header__logo {
  text-align: center;
}

.logo-image {
  max-height: 45px;
  width: auto;
}

/* ============================= */
/* MENU */
/* ============================= */

.header__menu {
  justify-self: start;
}

.menu-list {
  display: flex;
  gap: 2rem;
  list-style: none;
  margin: 0;
  padding: 0;
}

.menu-link {
  text-decoration: none;
  color: #111;
  font-weight: 500;
  letter-spacing: 0.03em;
  transition: color 0.3s ease;
}

.menu-link:hover {
  color: #c67c4e;
}

/* ============================= */
/* ACTIONS */
/* ============================= */

.header__actions {
  justify-self: end;
  display: flex;
  align-items: center;
  gap: 1.2rem;
}

.header__icon-button {
  background: none;
  border: none;
  cursor: pointer;
  padding: 0.4rem;
  color: #111;
  transition: color 0.3s ease;
  position: relative;
}

.header__icon-button:hover {
  color: #c67c4e;
}

.icon {
  width: 22px;
  height: 22px;
}

.cart-count {
  position: absolute;
  top: -6px;
  right: -6px;
  background: #c67c4e;
  color: #fff;
  font-size: 0.7rem;
  width: 18px;
  height: 18px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

