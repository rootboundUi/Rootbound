<header class="header" role="banner">
  <div class="header__container">
    <!-- Logo -->
    <div class="header__logo">
      {% if section.settings.logo %}
        <a href="{{ '/' | url }}" class="logo-link">
          <img 
            src="{{ section.settings.logo | image_url: width: 200 }}" 
            alt="{{ shop.name }}"
            width="{{ section.settings.logo_width }}"
            height="auto"
            class="logo-image"
          >
        </a>
      {% else %}
        <a href="{{ '/' | url }}" class="logo-link">
          <span class="logo-text">{{ shop.name }}</span>
        </a>
      {% endif %}
    </div>

    <!-- Desktop Navigation -->
    <nav class="header__menu" role="navigation">
      {% if settings.menu_main != blank %}
        <ul class="menu-list">
          {% for link in linklists[settings.menu_main].links %}
            <li class="menu-item">
              <a href="{{ link.url }}" class="menu-link">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </nav>

    <!-- Right Actions -->
    <div class="header__actions">
      <!-- Search -->
      <button class="header__icon-button search-trigger" aria-label="Search">
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
      </button>

      <!-- Account -->
      <a href="{{ routes.account_url }}" class="header__icon-button" aria-label="Account">
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
      </a>

      <!-- Cart -->
      <a href="{{ routes.cart_url }}" class="header__icon-button cart-icon" aria-label="Cart">
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="9" cy="21" r="1"></circle>
          <circle cx="20" cy="21" r="1"></circle>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
        </svg>
        <span class="cart-count" data-cart-count="0">0</span>
      </a>

      <!-- Mobile Menu Toggle -->
      <button class="header__menu-toggle mobile-only" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <nav class="mobile-menu hidden" role="navigation">
    {% if settings.menu_main != blank %}
      <ul class="mobile-menu__list">
        {% for link in linklists[settings.menu_main].links %}
          <li class="mobile-menu__item">
            <a href="{{ link.url }}" class="mobile-menu__link">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </nav>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo Width",
      "min": 50,
      "max": 300,
      "step": 10,
      "unit": "px",
      "default": 120
    }
  ]
}
{% endschema %}

<style>
.header {
  border-bottom: 1px solid #e0e0e0;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 50;
}

.header__container {
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 1.5rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 70px;
}

.header__logo {
  flex-shrink: 0;
}

.logo-link {
  display: flex;
  align-items: center;
  text-decoration: none;
  color: var(--color-primary);
}

.logo-image {
  max-height: 50px;
  width: auto;
}

.logo-text {
  font-size: 1.2rem;
  font-weight: 700;
  letter-spacing: 0.05em;
  color: var(--color-primary);
}

.header__menu {
  flex: 1;
  margin: 0 3rem;
}

.menu-list {
  display: flex;
  gap: 2rem;
  list-style: none;
  margin: 0;
  padding: 0;
}

.menu-link {
  color: var(--color-text);
  text-decoration: none;
  font-weight: 500;
  transition: color 0.3s ease;
}

.menu-link:hover {
  color: var(--color-accent);
}

.header__actions {
  display: flex;
  gap: 1.5rem;
  align-items: center;
}

.header__icon-button {
  background: none;
  border: none;
  cursor: pointer;
  padding: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-text);
  transition: color 0.3s ease;
  position: relative;
}

.header__icon-button:hover {
  color: var(--color-accent);
}

.icon {
  width: 24px;
  height: 24px;
}

.cart-count {
  position: absolute;
  top: -8px;
  right: -8px;
  background: var(--color-accent);
  color: #fff;
  border-radius: 50%;
  width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.75rem;
  font-weight: 700;
}

.header__menu-toggle {
  display: none;
  flex-direction: column;
  background: none;
  border: none;
  cursor: pointer;
  gap: 4px;
}

.header__menu-toggle span {
  width: 24px;
  height: 2px;
  background: var(--color-text);
}

.mobile-menu {
  display: none;
  background: #fff;
  border-bottom: 1px solid #e0e0e0;
  padding: 1rem;
}

.mobile-menu__list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.mobile-menu__link {
  color: var(--color-text);
  text-decoration: none;
  font-weight: 500;
}

@media (max-width: 768px) {
  .header__menu {
    display: none;
  }

  .header__menu-toggle {
    display: flex;
  }

  .header__container {
    height: 60px;
  }

  .mobile-menu:not(.hidden) {
    display: block;
  }

  .mobile-menu.hidden {
    display: none;
  }
}
.header {
  background: linear-gradient(
    to right,
    #f3e2c7 0%,
    #faf3e8 35%,
    #ffffff 50%,
    #f1e6d6 65%,
    #e6d7c3 100%
  );
}


</style>
