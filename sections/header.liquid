<header class="header" role="banner">
  <div class="header__container">
    <!-- Logo -->
    <div class="header__logo">
      {% if section.settings.logo %}
        <a href="{{ '/' | url }}" class="logo-link">
          <img 
            src="{{ section.settings.logo | image_url: width: 200 }}" 
            alt="{{ shop.name }}"
            width="{{ section.settings.logo_width }}"
            height="auto"
            class="logo-image"
          >
        </a>
      {% else %}
        <a href="{{ '/' | url }}" class="logo-link">
          <span class="logo-text">{{ shop.name }}</span>
        </a>
      {% endif %}
    </div>

    <!-- Desktop Navigation -->
    <nav class="header__menu" role="navigation">
      {% if settings.menu_main != blank %}
        <ul class="menu-list">
          {% for link in linklists[settings.menu_main].links %}
            <li class="menu-item">
              <a href="{{ link.url }}" class="menu-link">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </nav>

    <!-- Right Actions -->
    <div class="header__actions">
      <!-- Search -->
      <button class="header__icon-button search-trigger" aria-label="Search">
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
      </button>

      <!-- Account -->
      <a href="{{ routes.account_url }}" class="header__icon-button" aria-label="Account">
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
      </a>

      <!-- Cart -->
      <a href="{{ routes.cart_url }}" class="header__icon-button cart-icon" aria-label="Cart">
        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="9" cy="21" r="1"></circle>
          <circle cx="20" cy="21" r="1"></circle>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
        </svg>
        <span class="cart-count" data-cart-count="0">0</span>
      </a>

      <!-- Mobile Menu Toggle -->
      <button class="header__menu-toggle mobile-only" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <nav class="mobile-menu hidden" role="navigation">
    {% if settings.menu_main != blank %}
      <ul class="mobile-menu__list">
        {% for link in linklists[settings.menu_main].links %}
          <li class="mobile-menu__item">
            <a href="{{ link.url }}" class="mobile-menu__link">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </nav>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo Width",
      "min": 50,
      "max": 300,
      "step": 10,
      "unit": "px",
      "default": 120
    }
  ]
}
{% endschema %}

<style>
/* ============================= */
/* HEADER BASE */
/* ============================= */

.header {
  position: sticky;
  top: 0;
  z-index: 50;
  border-bottom: 1px solid rgba(0,0,0,0.05);

  background: linear-gradient(
    120deg,
    #ffe5d4,
    #fff1e8,
    #ffffff,
    #fff1e8,
    #ffe5d4
  );

  background-size: 200% 200%;
  animation: peachFlow 12s ease-in-out infinite;
}

@keyframes peachFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.header__container {
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 1.5rem;
  height: 70px;

  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
}

/* ============================= */
/* LOGO CENTER */
/* ============================= */

.header__logo {
  text-align: center;
}

.logo-image {
  max-height: 45px;
  width: auto;
}

/* ============================= */
/* MENU */
/* ============================= */

.header__menu {
  justify-self: start;
}

.menu-list {
  display: flex;
  gap: 2rem;
  list-style: none;
  margin: 0;
  padding: 0;
}

.menu-link {
  text-decoration: none;
  color: #111;
  font-weight: 500;
  letter-spacing: 0.03em;
  transition: color 0.3s ease;
}

.menu-link:hover {
  color: #c67c4e;
}

/* ============================= */
/* ACTIONS */
/* ============================= */

.header__actions {
  justify-self: end;
  display: flex;
  align-items: center;
  gap: 1.2rem;
}

.header__icon-button {
  background: none;
  border: none;
  cursor: pointer;
  padding: 0.4rem;
  color: #111;
  transition: color 0.3s ease;
  position: relative;
}

.header__icon-button:hover {
  color: #c67c4e;
}

.icon {
  width: 22px;
  height: 22px;
}

.cart-count {
  position: absolute;
  top: -6px;
  right: -6px;
  background: #c67c4e;
  color: #fff;
  font-size: 0.7rem;
  width: 18px;
  height: 18px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ============================= */
/* MOBILE */
/* ============================= */

@media (max-width: 768px) {

  .header__container {
    grid-template-columns: auto 1fr auto;
    height: 60px;
  }

  .header__menu {
    display: none;
  }

  .header__logo {
    text-align: center;
  }

  .header__menu-toggle {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .header__menu-toggle span {
    width: 22px;
    height: 2px;
    background: #111;
  }

  .header__actions {
    gap: 0.8rem;
  }
}

/* ============================= */
/* MOBILE MENU */
/* ============================= */

.mobile-menu {
  display: none;
  background: #fff;
  padding: 1.5rem;
  border-top: 1px solid rgba(0,0,0,0.05);
}

.mobile-menu:not(.hidden) {
  display: block;
}

.mobile-menu__list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.mobile-menu__link {
  text-decoration: none;
  color: #111;
  font-weight: 500;
}

/* Remove default button outline */
.header__menu-toggle {
  background: none;
  border: none;
  outline: none;
  box-shadow: none;
  -webkit-tap-highlight-color: transparent;
}

/* Remove focus outline (mouse users) */
.header__menu-toggle:focus {
  outline: none;
  box-shadow: none;
}

/* Optional: Keep accessible focus for keyboard users */
.header__menu-toggle:focus-visible {
  outline: 2px solid #c67c4e;
  outline-offset: 3px;
  border-radius: 4px;
}



</style>
