/* MOBILE */
/* ============================= */

@media (max-width: 768px) {

  .header__container {
    grid-template-columns: auto 1fr auto;
    height: 60px;
  }

  .header__menu {
    display: none;
  }

  .header__logo {
    text-align: center;
  }

  .header__menu-toggle {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .header__menu-toggle span {
    width: 22px;
    height: 2px;
    background: #111;
  }

  .header__actions {
    gap: 0.8rem;
  }
}

/* ============================= */
/* MOBILE MENU */
/* ============================= */

.mobile-menu {
  display: none;
  background: #fff;
  padding: 1.5rem;
  border-top: 1px solid rgba(0,0,0,0.05);
}

.mobile-menu:not(.hidden) {
  display: block;
}

.mobile-menu__list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.mobile-menu__link {
  text-decoration: none;
  color: #111;
  font-weight: 500;
}




