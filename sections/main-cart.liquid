<section class="cart-main">
  <div class="cart__container">

    {% if cart.item_count > 0 %}

      <h1 class="cart__title">Shopping Cart</h1>

      <form action="{{ routes.cart_url }}" method="post">

        <div class="cart__content">

          <!-- CART ITEMS -->
          <div class="cart__items">

            <table class="cart-table">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Price</th>
                  <th>Quantity</th>
                  <th>Total</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {% for item in cart.items %}
                  <tr class="cart-item">
                    
                    <td class="cart-item__product">
                      <a href="{{ item.url }}">
                        <img 
                          src="{{ item.image | image_url: width: 100 }}"
                          alt="{{ item.title | escape }}"
                          class="cart-item__image"
                        >
                      </a>
                      <div>
                        <p class="cart-item__title">{{ item.product.title }}</p>
                        {% unless item.variant.title == 'Default Title' %}
                          <p class="cart-item__variant">{{ item.variant.title }}</p>
                        {% endunless %}
                      </div>
                    </td>

                    <td>{{ item.price | money }}</td>

                    <td>
                      <input
                        type="number"
                        name="updates[]"
                        value="{{ item.quantity }}"
                        min="0"
                        class="qty-input"
                      >
                    </td>

                    <td>{{ item.final_line_price | money }}</td>

                    <td>
                      <a href="{{ item.url_to_remove }}" class="remove-btn">
                        Remove
                      </a>
                    </td>

                  </tr>
                {% endfor %}
              </tbody>
            </table>

          </div>

          <!-- SUMMARY -->
          <div class="cart__summary">

            <h2 class="summary__header">Order Summary</h2>

            <div class="summary__line">
              <span>Subtotal</span>
              <span>{{ cart.total_price | money }}</span>
            </div>

            <button
              type="submit"
              name="update"
              class="button button--secondary button--block"
              style="margin-bottom:1rem;"
            >
              Update Cart
            </button>

            <button
              type="submit"
              name="checkout"
              class="button button--primary button--block"
            >
              Proceed to Checkout
            </button>

            <a href="/collections/all" class="button button--block" style="margin-top:1rem;">
              Continue Shopping
            </a>

          </div>

        </div>

      </form>

    {% else %}

      <!-- EMPTY CART -->
      <div class="empty-cart">
        <div class="empty-cart__content">
          <svg class="empty-cart__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
          <h2 class="empty-cart__title">Your cart is empty</h2>
          <p class="empty-cart__text">
            Discover our curated collection of premium streetwear
          </p>
          <a href="/collections/all" class="button button--primary">
            Start Shopping
          </a>
        </div>
      </div>

    {% endif %}

  </div>
</section>

{% schema %}
{
  "name": "Main Cart",
  "settings": []
}
{% endschema %}

<style>
.cart__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem 1.5rem;
}

.cart__title {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 2rem;
}

.cart__content {
  display: grid;
  grid-template-columns: 1fr 350px;
  gap: 2rem;
}

.cart-table {
  width: 100%;
  border-collapse: collapse;
}

.cart-table th,
.cart-table td {
  padding: 1rem;
  border-bottom: 1px solid #e0e0e0;
}

.cart-item__product {
  display: flex;
  gap: 1rem;
}

.cart-item__image {
  width: 80px;
  height: 80px;
  object-fit: cover;
}

.qty-input {
  width: 60px;
  padding: 0.4rem;
}

.remove-btn {
  color: #c67c4e;
  text-decoration: underline;
}

.cart__summary {
  background: #f9f9f9;
  padding: 1.5rem;
  border-radius: 6px;
  height: fit-content;
}

.summary__line {
  display: flex;
  justify-content: space-between;
  margin-bottom: 1rem;
}

.button--block {
  display: block;
  width: 100%;
  padding: 0.75rem;
  text-align: center;
  border: none;
  cursor: pointer;
}

.button--primary {
  background: #000;
  color: #fff;
}

.button--secondary {
  background: #ddd;
}

.empty-cart {
  min-height: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-cart__content {
  text-align: center;
}

.empty-cart__icon {
  width: 60px;
  height: 60px;
  color: #ccc;
  margin-bottom: 1rem;
}

@media (max-width: 768px) {
  .cart__content {
    grid-template-columns: 1fr;
  }
}
</style>
