<section class="testimonials">
  <div class="testimonials__container">
    <div class="testimonials__header">
      <h2 class="testimonials__title">{{ section.settings.title }}</h2>
      {% if section.settings.subtitle %}
        <p class="testimonials__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="testimonials__grid">
      {% for block in section.blocks %}
        <article class="testimonial-card">
          <div class="testimonial-card__rating">
            {% for i in (1..5) %}
              <span class="star">â˜…</span>
            {% endfor %}
          </div>

          <p class="testimonial-card__text">
            {{ block.settings.quote | strip_html }}
          </p>

          <div class="testimonial-card__author">
            {% if block.settings.image %}
              <img 
                src="{{ block.settings.image | image_url: width: 50 }}"
                alt="{{ block.settings.author | escape }}"
                class="testimonial-card__avatar"
              >
            {% endif %}
            
            <div>
              <p class="testimonial-card__name">{{ block.settings.author }}</p>
              <p class="testimonial-card__location">{{ block.settings.location }}</p>
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Customer Love"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name"
        },
        {
          "type": "text",
          "id": "location",
          "label": "Location"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Author Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        { "type": "testimonial" },
        { "type": "testimonial" },
        { "type": "testimonial" }
      ]
    }
  ]
}
{% endschema %}

<style>
.testimonials {
  padding: 4rem 1.5rem;
  background: #fff;
}

.testimonials__container {
  max-width: 1440px;
  margin: 0 auto;
}

.testimonials__header {
  text-align: center;
  margin-bottom: 3rem;
}

.testimonials__title {
  font-size: 2rem;
  font-weight: 700;
  margin: 0 0 1rem 0;
  color: var(--color-text);
  font-family: 'Playfair Display', serif;
}

.testimonials__subtitle {
  font-size: 1rem;
  color: #666;
  margin: 0;
}

.testimonials__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.testimonial-card {
  background: var(--color-light-bg);
  padding: 2rem;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
}

.testimonial-card__rating {
  display: flex;
  gap: 0.25rem;
  margin-bottom: 1rem;
}

.star {
  color: var(--color-accent);
  font-size: 1rem;
}

.testimonial-card__text {
  font-size: 1rem;
  color: #666;
  margin: 0 0 1.5rem 0;
  line-height: 1.6;
  font-style: italic;
}

.testimonial-card__author {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.testimonial-card__avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  object-fit: cover;
}

.testimonial-card__name {
  font-weight: 600;
  margin: 0;
  color: var(--color-text);
}

.testimonial-card__location {
  font-size: 0.875rem;
  color: #999;
  margin: 0.25rem 0 0 0;
}

@media (max-width: 768px) {
  .testimonials {
    padding: 2rem 1.5rem;
  }

  .testimonials__grid {
    gap: 1.5rem;
  }

  .testimonials__title {
    font-size: 1.5rem;
  }
}
</style>
