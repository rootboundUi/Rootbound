  opacity: 0.9;
}

.social-links {
  display: flex;
  gap: 1rem;
}

.social-icon {
  width: 20px;
  height: 20px;
  stroke: #fff;
  fill: none;
  transition: stroke 0.3s ease;
}

.social-links a:hover .social-icon {
  stroke: var(--color-accent);
}

.footer__bottom {
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding: 1.5rem;
  text-align: center;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 1rem;
}

.copyright {
  font-size: 0.875rem;
  opacity: 0.8;
  margin: 0;
}

.payment-methods {
  display: flex;
  gap: 0.5rem;
  justify-content: center;
  flex-wrap: wrap;
}

.payment-icon {
  height: 24px;
  width: auto;
  opacity: 0.8;
}

@media (max-width: 768px) {
  .footer__container {
    grid-template-columns: repeat(2, 1fr);
  }

  .footer__bottom {
    flex-direction: column;
  }
}
.footer {
  background: #0c0c0f;
  color: #eaeaea;
  margin-top: 6rem;
  position: relative;
}

/* subtle top divider line */
.footer::before {
  content: "";
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  height: 1px;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(184,155,94,0.6),
    transparent
  );
}

/* Container */
.footer__container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 5rem 2rem;
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 3rem;
}

/* Brand column wider */
.footer__section:first-child {
  grid-column: span 2;
}

/* Headings */
.footer__heading {
  font-size: 0.8rem;
  letter-spacing: 2px;
  text-transform: uppercase;
  font-weight: 600;
  margin-bottom: 1.2rem;
  color: #b89b5e;
  font-family: 'Inter', sans-serif;
}

/* Description */
.footer__description {
  font-size: 0.95rem;
  line-height: 1.8;
  color: #bdbdbd;
  max-width: 320px;
}

/* Links */
.footer__links {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer__links li {
  margin-bottom: 0.7rem;
}

.footer__links a {
  text-decoration: none;
  color: #cfcfcf;
  font-size: 0.9rem;
  font-family: 'Inter', sans-serif;
  position: relative;
  transition: color 0.3s ease;
}

.footer__links a::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -3px;
  width: 0%;
  height: 1px;
  background: #b89b5e;
  transition: width 0.3s ease;
}

.footer__links a:hover {
  color: #ffffff;
}

.footer__links a:hover::after {
  width: 100%;
}

/* Newsletter */
.newsletter-form {
  display: flex;
  flex-direction: column;
  gap: 0.8rem;
  max-width: 280px;
}

.newsletter-input {
  padding: 0.85rem 1rem;
  background: #141418;
  border: 1px solid rgba(255,255,255,0.08);
  color: #fff;
  font-size: 0.9rem;
  border-radius: 6px;
  transition: border 0.3s ease;
}

.newsletter-input:focus {
  outline: none;
  border: 1px solid #b89b5e;
}

.newsletter-input::placeholder {
  color: #777;
}

.newsletter-button {
  padding: 0.9rem;
  background: #b89b5e;
  border: none;
  color: #0c0c0f;
  font-weight: 600;
  font-size: 0.85rem;
  letter-spacing: 1px;
  text-transform: uppercase;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.newsletter-button:hover {
  background: #d1b278;
}

/* Social */
.social-links {
  display: flex;
  gap: 1rem;
  margin-top: 1rem;
}

.social-icon {
  width: 18px;
  height: 18px;
  stroke: #cfcfcf;
  transition: stroke 0.3s ease, transform 0.3s ease;
}

.social-links a:hover .social-icon {
  stroke: #b89b5e;
  transform: translateY(-2px);
}

/* Bottom */
.footer__bottom {
  border-top: 1px solid rgba(255,255,255,0.06);
  padding: 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 1rem;
  font-family: 'Inter', sans-serif;
}

.copyright {
  font-size: 0.85rem;
  color: #9a9a9a;
}

.payment-icon {
  height: 22px;
  opacity: 0.6;
  transition: opacity 0.3s ease;
}

.payment-icon:hover {
  opacity: 1;
}

/* Responsive */
@media (max-width: 1100px) {
  .footer__container {
    grid-template-columns: repeat(2, 1fr);
  }

  .footer__section:first-child {
    grid-column: span 2;
  }
}

@media (max-width: 768px) {
  .footer__container {
    grid-template-columns: 1fr;
    padding: 4rem 1.5rem;
  }

  .footer__bottom {
    flex-direction: column;
    text-align: center;
  }
}

</style>
