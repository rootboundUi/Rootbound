<section class="rich-text">
  <div class="rich-text__container">
    <div class="rich-text__content">
      <div class="rich-text__text">
        {{ section.settings.content }}
      </div>

      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="button button--primary">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>

    {% if section.settings.image %}
      <div class="rich-text__image">
        <img 
          src="{{ section.settings.image | image_url: width: 600 }}"
          alt="{{ section.settings.image.alt | escape }}"
        >
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Rich Text",
  "settings": [
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        { "value": "left", "label": "Image Left" },
        { "value": "right", "label": "Image Right" }
      ],
      "default": "right"
    }
  ],
  "presets": [
    { "name": "Rich Text" }
  ]
}
{% endschema %}

<style>
.rich-text {
  padding: 4rem 1.5rem;
  background: #fff;
}

.rich-text__container {
  max-width: 1440px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
  align-items: center;
}

.rich-text__content {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.rich-text__content h2 {
  font-size: 2rem;
  font-weight: 700;
  margin: 0;
  font-family: 'Playfair Display', serif;
}

.rich-text__content p {
  font-size: 1rem;
  line-height: 1.8;
  color: #666;
}

.rich-text__image img {
  width: 100%;
  height: auto;
  border-radius: 4px;
}

@media (max-width: 1024px) {
  .rich-text__container {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .rich-text {
    padding: 2rem 1.5rem;
  }

  .rich-text__content h2 {
    font-size: 1.5rem;
  }
}
.rich-text {
  padding: 8rem 2rem;
  background: linear-gradient(
    135deg,
    #f8f5f1 0%,
    #ffffff 50%,
    #f8f5f1 100%
  );
  text-align: center;
}

.rich-text__container {
  max-width: 900px;
  margin: 0 auto;
  display: block;
}

.rich-text__content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1.8rem;
}

/* WHY ROOTBOUND label */
.rich-text__content h5 {
  font-size: 0.75rem;
  letter-spacing: 4px;
  text-transform: uppercase;
  color: #b89b5e;
  font-weight: 600;
  margin: 0;
  position: relative;
}

/* Gold Accent Line */
.rich-text__content h5::after {
  content: "";
  display: block;
  width: 60px;
  height: 1px;
  background: #b89b5e;
  margin: 12px auto 0;
  opacity: 0.6;
}

/* Main Heading */
.rich-text__content h2 {
  font-family: 'Playfair Display', serif;
  font-size: 2.2rem;
  line-height: 1.15;
  font-weight: 600;
  color: #111;
  max-width: 800px;
  margin: 0;
}

/* Subline */
.rich-text__content h3 {
  font-size: 1.15rem;
  font-weight: 500;
  color: #444;
  margin-top: 0.5rem;
}

/* Body Text */
.rich-text__content p {
  font-size: 1.05rem;
  line-height: 1.9;
  color: #666;
  max-width: 680px;
  margin-top: 1.5rem;
}

</style>
