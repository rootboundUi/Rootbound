<section class="customer-login">
  <div class="customer-login__container">
    <div class="login-form">
      <h1 class="login-form__title">Sign In</h1>
      
      <form method="post" action="/account/login" class="form">
        <fieldset class="form__fieldset">
          <label for="email" class="form__label">Email</label>
          <input 
            type="email"
            name="customer[email]"
            id="email"
            class="form__input"
            required
          >
        </fieldset>

        <fieldset class="form__fieldset">
          <label for="password" class="form__label">Password</label>
          <input 
            type="password"
            name="customer[password]"
            id="password"
            class="form__input"
            required
          >
        </fieldset>

        <button type="submit" class="button button--primary button--large">
          Sign In
        </button>
      </form>

      <p class="login-form__footer">
        Don't have an account? <a href="{{ routes.account_register_url }}">Create one</a>
      </p>

      <p class="login-form__footer">
        <a href="{{ routes.account_recover_url }}">Forgot your password?</a>
      </p>
    </div>

    <div class="register-form">
      <h2 class="register-form__title">Create Account</h2>
      
      <form method="post" action="/account" class="form">
        <input type="hidden" name="form_type" value="create">

        <fieldset class="form__fieldset">
          <label for="first-name" class="form__label">First Name</label>
          <input 
            type="text"
            name="customer[first_name]"
            id="first-name"
            class="form__input"
            required
          >
        </fieldset>

        <fieldset class="form__fieldset">
          <label for="last-name" class="form__label">Last Name</label>
          <input 
            type="text"
            name="customer[last_name]"
            id="last-name"
            class="form__input"
            required
          >
        </fieldset>

        <fieldset class="form__fieldset">
          <label for="email" class="form__label">Email</label>
          <input 
            type="email"
            name="customer[email]"
            id="email"
            class="form__input"
            required
          >
        </fieldset>

        <fieldset class="form__fieldset">
          <label for="password" class="form__label">Password</label>
          <input 
            type="password"
            name="customer[password]"
            id="password"
            class="form__input"
            required
          >
        </fieldset>

        <button type="submit" class="button button--primary button--large">
          Create Account
        </button>
      </form>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Customer Login"
}
{% endschema %}

<style>
.customer-login {
  padding: 3rem 1.5rem;
  background: #f9f9f9;
  min-height: calc(100vh - 300px);
}

.customer-login__container {
  max-width: 900px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
}

.login-form,
.register-form {
  background: white;
  padding: 2rem;
  border-radius: 4px;
}

.login-form__title,
.register-form__title {
  font-size: 1.5rem;
  font-weight: 700;
  margin: 0 0 1.5rem 0;
  font-family: 'Playfair Display', serif;
}

.form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.form__fieldset {
  border: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.form__label {
  font-weight: 600;
  font-size: 0.875rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.form__input {
  padding: 0.75rem;
  border: 1px solid #ddd;
  border-radius: 2px;
  font-size: 1rem;
}

.form__input:focus {
  outline: none;
  border-color: var(--color-accent);
}

.login-form__footer,
.register-form__footer {
  text-align: center;
  margin-top: 1rem;
  font-size: 0.875rem;
}

.login-form__footer a,
.register-form__footer a {
  color: var(--color-accent);
  text-decoration: none;
}

@media (max-width: 1024px) {
  .customer-login__container {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .customer-login {
    padding: 1.5rem 1.5rem;
  }

  .login-form,
  .register-form {
    padding: 1.5rem;
  }
}
</style>
