<section class="cart-main">
  <div class="cart__container">
    {% if cart.item_count > 0 %}
      <div class="cart__content">
        <!-- Cart Items -->
        <div class="cart__items">
          <h1 class="cart__title">Shopping Cart</h1>
          
          <table class="cart-table">
            <thead>
              <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {% for item in cart.items %}
                <tr class="cart-item" data-item-id="{{ item.key }}">
                  <td class="cart-item__product">
                    <a href="{{ item.url }}">
                      <img 
                        src="{{ item.image | image_url: width: 100 }}"
                        alt="{{ item.title | escape }}"
                        class="cart-item__image"
                      >
                    </a>
                    <div>
                      <p class="cart-item__title">{{ item.title }}</p>
                      {% if item.variant.title != 'Default Title' %}
                        <p class="cart-item__variant">{{ item.variant.title }}</p>
                      {% endif %}
                    </div>
                  </td>
                  <td class="cart-item__price">{{ item.price | money }}</td>
                  <td class="cart-item__quantity">
                    <form action="/cart/change" method="post" class="quantity-form">
                      <input type="hidden" name="line" value="{{ forloop.index }}">
                      <input 
                        type="number" 
                        name="quantity" 
                        value="{{ item.quantity }}"
                        min="0"
                        class="qty-input"
                      >
                      <button type="submit" class="qty-update">Update</button>
                    </form>
                  </td>
                  <td class="cart-item__total">{{ item.final_line_price | money }}</td>
                  <td class="cart-item__remove">
                    <form action="/cart/change" method="post">
                      <input type="hidden" name="line" value="{{ forloop.index }}">
                      <input type="hidden" name="quantity" value="0">
                      <button type="submit" class="remove-btn">Remove</button>
                    </form>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>

        <!-- Cart Summary -->
        <div class="cart__summary">
          <h2 class="summary__header">Order Summary</h2>
          
          <div class="summary__line">
            <span>Subtotal</span>
            <span>{{ cart.subtotal_price | money }}</span>
          </div>

          <div class="summary__line">
            <span>Shipping</span>
            <span>{{ cart.shipping_price | money }}</span>
          </div>

          <div class="summary__line">
            <span>Tax</span>
            <span>{{ cart.tax_price | money }}</span>
          </div>

          <div class="summary__total">
            <span>Total</span>
            <span>{{ cart.total_price | money }}</span>
          </div>

          <form action="/checkout" method="post" class="checkout-form">
            <button type="submit" class="button button--primary button--large">
              Proceed to Checkout
            </button>
          </form>

          <a href="/collections/all" class="button button--secondary button--block">
            Continue Shopping
          </a>

          <!-- Discount Code -->
          <details class="discount-section">
            <summary>Have a discount code?</summary>
            <form action="/cart" method="post" class="discount-form">
              <input 
                type="text" 
                name="discount"
                placeholder="Enter code"
                class="discount-input"
              >
              <button type="submit" class="button button--small">Apply</button>
            </form>
          </details>
        </div>
      </div>

      <!-- Trust Badges -->
      <div class="cart__badges">
        <div class="badge">
          <svg class="badge__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          <span>Secure checkout</span>
        </div>
        <div class="badge">
          <svg class="badge__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
            <path d="M1 10h22"></path>
          </svg>
          <span>Multiple payment methods</span>
        </div>
        <div class="badge">
          <svg class="badge__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          </svg>
          <span>30-day guarantee</span>
        </div>
      </div>
    {% else %}
      <div class="empty-cart">
        <div class="empty-cart__content">
          <svg class="empty-cart__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
          <h2 class="empty-cart__title">Your cart is empty</h2>
          <p class="empty-cart__text">Discover our curated collection of premium streetwear</p>
          <a href="/collections/all" class="button button--primary">Start Shopping</a>
        </div>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Cart Main"
}
{% endschema %}

<style>
/* ===============================
   MODERN PREMIUM CART
================================ */

.cart__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 3rem 1.5rem 5rem;
  background: #faf8f5;
}

/* TITLE */
.cart__title {
  font-size: 2.4rem;
  font-weight: 600;
  margin-bottom: 2.5rem;
  font-family: 'Playfair Display', serif;
  letter-spacing: -0.5px;
}

/* LAYOUT */
.cart__content {
  display: grid;
  grid-template-columns: 1fr 380px;
  gap: 3rem;
}

/* ===============================
   TABLE STYLE (DESKTOP)
================================ */

.cart-table {
  width: 100%;
  border-collapse: collapse;
  background: #fff;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 8px 30px rgba(0,0,0,0.04);
}

.cart-table th {
  text-align: left;
  padding: 1.2rem;
  border-bottom: 1px solid #eee;
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  color: #777;
}

.cart-table td {
  padding: 1.4rem 1.2rem;
  border-bottom: 1px solid #f2f2f2;
}

.cart-item__product {
  display: flex;
  gap: 1.2rem;
  align-items: center;
}

.cart-item__image {
  width: 90px;
  height: 90px;
  object-fit: cover;
  border-radius: 10px;
  transition: transform .4s ease;
}

.cart-item__image:hover {
  transform: scale(1.05);
}

.cart-item__title {
  font-weight: 600;
  font-size: 0.95rem;
}

.cart-item__variant {
  font-size: 0.8rem;
  color: #999;
  margin-top: 0.3rem;
}

/* QUANTITY */
.qty-input {
  width: 65px;
  padding: 0.6rem;
  border-radius: 8px;
  border: 1px solid #ddd;
  text-align: center;
}

.qty-update {
  padding: 0.6rem 1rem;
  border-radius: 8px;
  border: none;
  background: #f3eee8;
  cursor: pointer;
  transition: background .3s ease;
}

.qty-update:hover {
  background: #e8dfd5;
}

/* REMOVE */
.remove-btn {
  color: #c67c4e;
  background: none;
  border: none;
  font-size: 0.85rem;
  cursor: pointer;
  transition: opacity .3s ease;
}

.remove-btn:hover {
  opacity: 0.7;
}

/* ===============================
   SUMMARY PANEL
================================ */

.cart__summary {
  background: #ffffff;
  padding: 2rem;
  border-radius: 20px;
  box-shadow: 0 10px 35px rgba(0,0,0,0.05);
  position: sticky;
  top: 120px;
}

.summary__header {
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 1.8rem;
}

.summary__line {
  display: flex;
  justify-content: space-between;
  margin-bottom: 0.9rem;
  font-size: 0.9rem;
  color: #666;
}

.summary__total {
  display: flex;
  justify-content: space-between;
  margin: 1.8rem 0;
  padding: 1.2rem 0;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  font-weight: 700;
  font-size: 1.1rem;
}

/* BUTTONS */
.button--primary {
  background: #111;
  color: #fff;
  border-radius: 50px;
  padding: 0.9rem;
  font-weight: 500;
  transition: transform .3s ease, box-shadow .3s ease;
}

.button--primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(0,0,0,0.15);
}

.button--secondary {
  background: #f3eee8;
  border-radius: 50px;
  padding: 0.9rem;
}

.discount-section summary {
  font-size: 0.85rem;
  cursor: pointer;
  margin-top: 1rem;
}

.discount-input {
  border-radius: 50px;
  padding: 0.6rem 1rem;
}

/* ===============================
   TRUST BADGES
================================ */

.cart__badges {
  margin-top: 4rem;
  display: flex;
  justify-content: space-between;
  gap: 2rem;
}

.badge {
  flex: 1;
  text-align: center;
  padding: 1.5rem;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 6px 20px rgba(0,0,0,0.03);
}

.badge__icon {
  width: 28px;
  height: 28px;
  margin-bottom: 0.8rem;
  color: #c67c4e;
}

/* ===============================
   MOBILE OPTIMIZED VERSION
================================ */

@media (max-width: 768px) {

  .cart__content {
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  /* Convert table into cards */
  .cart-table thead {
    display: none;
  }

  .cart-table,
  .cart-table tbody,
  .cart-table tr,
  .cart-table td {
    display: block;
    width: 100%;
  }

  .cart-table tr {
    background: #fff;
    margin-bottom: 1.5rem;
    border-radius: 16px;
    padding: 1.2rem;
    box-shadow: 0 6px 20px rgba(0,0,0,0.04);
  }

  .cart-table td {
    border: none;
    padding: 0.5rem 0;
  }

  .cart-item__product {
    flex-direction: row;
  }

  .cart-item__image {
    width: 75px;
    height: 75px;
  }

  /* Sticky bottom checkout bar */
  .cart__summary {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    border-radius: 0;
    box-shadow: 0 -5px 20px rgba(0,0,0,0.08);
    padding: 1rem 1.5rem;
    z-index: 100;
  }

  .summary__line {
    display: none;
  }

  .summary__total {
    border: none;
    margin: 0;
    padding: 0;
  }

  .checkout-form {
    margin-top: 1rem;
  }

  .cart__badges {
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 120px; /* space for sticky checkout */
  }

}

</style>
