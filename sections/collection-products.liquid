<section class="collection-products">
  <div class="collection-products__container">
    {% if collection.products.size > 0 %}
      <div class="products__grid">
        {% for product in collection.products %}
          {% render 'product-card', product: product %}
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <div class="pagination">
          {% if paginate.previous %}
            <a href="{{ paginate.previous.url }}" class="pagination__link">← Previous</a>
          {% endif %}

          {% for part in paginate.parts %}
            {% if part.is_link %}
              <a href="{{ part.url }}" class="pagination__link">{{ part.title }}</a>
            {% else %}
              <span class="pagination__current">{{ part.title }}</span>
            {% endif %}
          {% endfor %}

          {% if paginate.next %}
            <a href="{{ paginate.next.url }}" class="pagination__link">Next →</a>
          {% endif %}
        </div>
      {% endif %}
    {% else %}
      <div class="empty-state">
        <p>No products found in this collection.</p>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Collection Products",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products Per Page",
      "min": 6,
      "max": 48,
      "step": 6,
      "default": 12
    }
  ]
}
{% endschema %}

<style>
/* ================================
   LUXURY MINIMAL COLLECTION GRID
================================ */

.collection-products__container {
  max-width: 1440px;
  margin: 0 auto;
  padding: 2.5rem 1.5rem 5rem;
  background: #faf8f5;
}

/* ================================
   GRID
================================ */

.products__grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(270px, 1fr));
  gap: 3rem;
  margin-bottom: 4rem;
}

/* ================================
   PRODUCT CARD BASE
================================ */

.products__grid > * {
  background: #ffffff;
  border-radius: 20px;
  padding: 1.2rem;
  position: relative;
  overflow: hidden;

  box-shadow: 0 8px 30px rgba(0,0,0,0.04);

  opacity: 0;
  transform: translateY(30px);
  animation: fadeUp 0.8s ease forwards;
}

/* Stagger animation */
.products__grid > *:nth-child(2) { animation-delay: .05s; }
.products__grid > *:nth-child(3) { animation-delay: .1s; }
.products__grid > *:nth-child(4) { animation-delay: .15s; }
.products__grid > *:nth-child(5) { animation-delay: .2s; }

/* Fade animation */
@keyframes fadeUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ================================
   IMAGE
================================ */

.products__grid img {
  width: 100%;
  border-radius: 16px;
  transition: transform .6s cubic-bezier(.22,.61,.36,1);
}

/* Overlay */
.products__grid > *::before {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to bottom,
    rgba(255,255,255,0) 60%,
    rgba(0,0,0,0.05)
  );
  opacity: 0;
  transition: opacity .4s ease;
  pointer-events: none;
}

/* Hover effects */
.products__grid > *:hover {
  transform: translateY(-8px);
  box-shadow: 0 25px 60px rgba(0,0,0,0.08);
}

.products__grid > *:hover img {
  transform: scale(1.08);
}

.products__grid > *:hover::before {
  opacity: 1;
}

/* ================================
   QUICK VIEW BUTTON
================================ */

.products__grid > *::after {
  content: "Quick View";
  position: absolute;
  bottom: 22px;
  left: 50%;
  transform: translateX(-50%) translateY(20px);
  background: #111;
  color: #fff;
  padding: 8px 20px;
  border-radius: 40px;
  font-size: 13px;
  font-weight: 500;
  opacity: 0;
  transition: all .35s ease;
}

.products__grid > *:hover::after {
  opacity: 1;
  transform: translateX(-50%) translateY(0);
}

/* ================================
   PRODUCT TEXT
================================ */

.products__grid h3,
.products__grid .product-title {
  font-size: 16px;
  font-weight: 500;
  margin-top: 1.2rem;
  margin-bottom: 0.4rem;
  color: #222;
  letter-spacing: .2px;
}

.products__grid .price,
.products__grid .product-price {
  font-size: 15px;
  font-weight: 600;
  color: #111;
}

/* ================================
   PAGINATION
================================ */

.pagination {
  display: flex;
  justify-content: center;
  gap: 0.8rem;
  flex-wrap: wrap;
}

.pagination__link,
.pagination__current {
  padding: 0.6rem 1.4rem;
  border-radius: 40px;
  border: 1px solid rgba(0,0,0,0.12);
  text-decoration: none;
  font-size: 14px;
  transition: all .3s ease;
}

.pagination__link {
  background: #ffffff;
  color: #222;
}

.pagination__link:hover {
  background: #f3eee8;
  border-color: #000;
}

.pagination__current {
  background: #111;
  color: #fff;
  border-color: #111;
}

/* ================================
   MOBILE
================================ */

@media (max-width: 768px) {

  .collection-products__container {
    padding: 1.5rem 1rem 4rem;
  }

  .products__grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1.3rem;
  }

  .products__grid > * {
    padding: 0.9rem;
    border-radius: 16px;
  }

  /* Disable hover overlay on touch */
  .products__grid > *::after {
    display: none;
  }

}

</style>
