<section class="collection-products">
  <div class="collection-products__container">

    {% paginate collection.products by section.settings.products_per_page %}

      {% if collection.products.size > 0 %}
        <div class="products__grid">
          {% for product in collection.products %}
            <a href="{{ product.url }}" class="product-card-link">
              <div class="product-card-wrapper">
                <div class="product-image">
                  {{ product.featured_image | image_url: width: 800 | image_tag }}
                </div>
                <div class="product-content">
                  <div class="product-vendor">{{ product.vendor }}</div>
                  <h3 class="product-title">{{ product.title }}</h3>
                  <div class="product-price">
                    {{ product.price | money }}
                  </div>
                  <span class="view-product">View Product →</span>
                </div>
              </div>
            </a>
          {% endfor %}
        </div>

        {% if paginate.pages > 1 %}
          <div class="pagination">
            {% if paginate.previous %}
              <a href="{{ paginate.previous.url }}" class="pagination__link">← Previous</a>
            {% endif %}

            {% for part in paginate.parts %}
              {% if part.is_link %}
                <a href="{{ part.url }}" class="pagination__link">{{ part.title }}</a>
              {% else %}
                <span class="pagination__current">{{ part.title }}</span>
              {% endif %}
            {% endfor %}

            {% if paginate.next %}
              <a href="{{ paginate.next.url }}" class="pagination__link">Next →</a>
            {% endif %}
          </div>
        {% endif %}

      {% else %}
        <div class="empty-state">
          <p>No products found in this collection.</p>
        </div>
      {% endif %}

    {% endpaginate %}

  </div>
</section>

{% schema %}
{
  "name": "Collection Products",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products Per Page",
      "min": 6,
      "max": 48,
      "step": 6,
      "default": 12
    }
  ]
}
{% endschema %}

<style>

/* ================================
   ULTRA MINIMAL FASHION GRID
================================ */

.collection-products__container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 3rem 2rem 6rem;
  background: #faf8f5;
}

/* GRID */
.products__grid {
  display: flex;
  flex-direction: column;
  gap: 3.5rem;
}

/* LINK RESET */
.product-card-link {
  text-decoration: none;
  color: inherit;
  display: block;
}

/* SIDE-BY-SIDE LAYOUT */
.product-card-wrapper {
  display: flex;
  align-items: center;
  gap: 4rem;
  background: #ffffff;
  padding: 2rem;
  border-radius: 22px;
  transition: all .4s cubic-bezier(.22,.61,.36,1);
  box-shadow: 0 10px 35px rgba(0,0,0,0.03);
}

/* Hover effect */
.product-card-link:hover .product-card-wrapper {
  transform: translateY(-6px);
  box-shadow: 0 30px 70px rgba(0,0,0,0.06);
}

/* IMAGE */
.product-image {
  flex: 1;
}

.product-image img {
  width: 100%;
  border-radius: 18px;
  transition: transform .6s cubic-bezier(.22,.61,.36,1);
}

.product-card-link:hover .product-image img {
  transform: scale(1.05);
}

/* CONTENT */
.product-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 0.6rem;
}

.product-vendor {
  font-size: 12px;
  letter-spacing: 1px;
  text-transform: uppercase;
  color: #888;
}

.product-title {
  font-size: 22px;
  font-weight: 500;
  color: #111;
  line-height: 1.3;
}

.product-price {
  font-size: 18px;
  font-weight: 600;
  color: #111;
  margin-top: 0.3rem;
}

/* VIEW PRODUCT */
.view-product {
  margin-top: 1.5rem;
  font-size: 14px;
  letter-spacing: 0.5px;
  color: #111;
  transition: all .3s ease;
  position: relative;
  width: fit-content;
}

.view-product::after {
  content: "";
  position: absolute;
  bottom: -3px;
  left: 0;
  width: 0%;
  height: 1px;
  background: #111;
  transition: width .3s ease;
}

.product-card-link:hover .view-product::after {
  width: 100%;
}

/* PAGINATION */
.pagination {
  display: flex;
  justify-content: center;
  gap: 1rem;
  margin-top: 4rem;
}

.pagination__link,
.pagination__current {
  padding: 0.6rem 1.4rem;
  border-radius: 40px;
  border: 1px solid rgba(0,0,0,0.12);
  text-decoration: none;
  font-size: 14px;
}

.pagination__current {
  background: #111;
  color: #fff;
}

/* MOBILE STACK */
@media (max-width: 768px) {

  .collection-products__container {
    padding: 2rem 1rem 4rem;
  }

  .product-card-wrapper {
    flex-direction: column;
    gap: 1.5rem;
    padding: 1.5rem;
  }

  .product-title {
    font-size: 18px;
  }

  .product-price {
    font-size: 16px;
  }

}

</style>
