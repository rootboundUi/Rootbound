<section class="collection-products">
  <div class="collection-products__container">
    {% if collection.products.size > 0 %}
      <div class="products__grid">
        {% for product in collection.products %}
          {% render 'product-card', product: product %}
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <div class="pagination">
          {% if paginate.previous %}
            <a href="{{ paginate.previous.url }}" class="pagination__link">← Previous</a>
          {% endif %}

          {% for part in paginate.parts %}
            {% if part.is_link %}
              <a href="{{ part.url }}" class="pagination__link">{{ part.title }}</a>
            {% else %}
              <span class="pagination__current">{{ part.title }}</span>
            {% endif %}
          {% endfor %}

          {% if paginate.next %}
            <a href="{{ paginate.next.url }}" class="pagination__link">Next →</a>
          {% endif %}
        </div>
      {% endif %}
    {% else %}
      <div class="empty-state">
        <p>No products found in this collection.</p>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Collection Products",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products Per Page",
      "min": 6,
      "max": 48,
      "step": 6,
      "default": 12
    }
  ]
}
{% endschema %}

<style>
/* =================================
   LUXURY MINIMAL COLLECTION GRID
================================= */

.collection-products__container {
  max-width: 1440px;
  margin: 0 auto;
  padding: 3rem 1.5rem 6rem;
  background: #f8f6f2; /* luxury light beige */
}

/* ================= GRID ================= */

.products__grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 3rem;
}

/* ================= CARD ================= */

.products__grid > * {
  background: #ffffff;
  border-radius: 20px;
  padding: 1.4rem;
  position: relative;
  overflow: hidden;

  box-shadow: 0 8px 30px rgba(0,0,0,0.04);
  transition: all .5s cubic-bezier(.22,.61,.36,1);

  opacity: 0;
  transform: translateY(20px);
  animation: fadeUp .8s ease forwards;
}

/* stagger effect */
.products__grid > *:nth-child(2) { animation-delay: .1s; }
.products__grid > *:nth-child(3) { animation-delay: .2s; }
.products__grid > *:nth-child(4) { animation-delay: .3s; }

@keyframes fadeUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Hover Lift */
.products__grid > *:hover {
  transform: translateY(-10px);
  box-shadow: 0 25px 60px rgba(0,0,0,0.08);
}

/* ================= IMAGE ================= */

.products__grid img {
  width: 100%;
  border-radius: 16px;
  transition: transform .8s ease;
}

.products__grid > *:hover img {
  transform: scale(1.08);
}

/* ================= TEXT ================= */

.products__grid h3,
.products__grid .product-title {
  font-size: 16px;
  font-weight: 500;
  margin-top: 1.2rem;
  margin-bottom: 0.4rem;
  letter-spacing: 0.3px;
  color: #222;
}

.products__grid .price,
.products__grid .product-price {
  font-size: 15px;
  font-weight: 600;
  color: #111;
  letter-spacing: .4px;
}

/* ================= HOVER BUTTON ================= */

.products__grid > *::after {
  content: "View Product";
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%) translateY(20px);
  background: #111;
  color: #fff;
  padding: 10px 22px;
  border-radius: 40px;
  font-size: 13px;
  letter-spacing: .5px;
  opacity: 0;
  transition: all .4s ease;
}

.products__grid > *:hover::after {
  opacity: 1;
  transform: translateX(-50%) translateY(0);
}

/* ================= EMPTY STATE ================= */

.empty-state {
  text-align: center;
  padding: 5rem 2rem;
  color: #777;
  font-size: 16px;
  letter-spacing: .5px;
}

/* ================= PAGINATION ================= */

.pagination {
  display: flex;
  justify-content: center;
  gap: 0.8rem;
  margin-top: 4rem;
}

.pagination__link,
.pagination__current {
  padding: 0.7rem 1.4rem;
  border-radius: 50px;
  font-size: 14px;
  border: 1px solid rgba(0,0,0,0.12);
  text-decoration: none;
  transition: all .3s ease;
}

.pagination__link {
  background: #fff;
  color: #222;
}

.pagination__link:hover {
  background: #111;
  color: #fff;
  border-color: #111;
}

.pagination__current {
  background: #111;
  color: #fff;
  border-color: #111;
}

/* ================= MOBILE ================= */

@media (max-width: 768px) {

  .collection-products__container {
    padding: 2rem 1rem 4rem;
  }

  .products__grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1.4rem;
  }

  .products__grid > * {
    padding: 1rem;
    border-radius: 16px;
  }

  .products__grid > *::after {
    display: none; /* remove hover button on mobile */
  }

}

</style>
