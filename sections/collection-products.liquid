<section class="collection-products">
  <div class="collection-products__container">

    {% paginate collection.products by section.settings.products_per_page %}

      {% if collection.products.size > 0 %}
        <div class="products__editorial">
          {% for product in collection.products %}

            {% assign mod = forloop.index0 | modulo: 2 %}

            <a href="{{ product.url }}" class="editorial-card reveal">

              <div class="editorial-wrapper {% if mod == 0 %}normal{% else %}reverse{% endif %}">

                <div class="editorial-image">
                  {{ product.featured_image | image_url: width: 1400 | image_tag }}
                </div>

                <div class="editorial-content">
                  <div class="editorial-vendor">
                    {{ product.vendor }}
                  </div>

                  <h2 class="editorial-title">
                    {{ product.title }}
                  </h2>

                  <div class="editorial-price">
                    {{ product.price | money }}
                  </div>

                  <span class="editorial-cta">
                    View Product →
                  </span>
                </div>

              </div>

            </a>
          {% endfor %}
        </div>

        {% if paginate.pages > 1 %}
          <div class="pagination">
            {% if paginate.previous %}
              <a href="{{ paginate.previous.url }}" class="pagination__link">← Previous</a>
            {% endif %}

            {% for part in paginate.parts %}
              {% if part.is_link %}
                <a href="{{ part.url }}" class="pagination__link">{{ part.title }}</a>
              {% else %}
                <span class="pagination__current">{{ part.title }}</span>
              {% endif %}
            {% endfor %}

            {% if paginate.next %}
              <a href="{{ paginate.next.url }}" class="pagination__link">Next →</a>
            {% endif %}
          </div>
        {% endif %}

      {% else %}
        <div class="empty-state">
          <p>No products found.</p>
        </div>
      {% endif %}

    {% endpaginate %}

  </div>
</section>

{% schema %}
{
  "name": "Editorial Collection",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products Per Page",
      "min": 4,
      "max": 20,
      "step": 2,
      "default": 6
    }
  ]
}
{% endschema %}

<style>

/* ================================
   TRENDING FASHION FONTS
================================ */
@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;600&family=Inter:wght@400;500;600&display=swap');

/* ================================
   EDITORIAL COLLECTION STYLE
================================ */

.collection-products__container {
  max-width: 1600px;
  margin: 0 auto;
  padding: 4rem 3rem 6rem;
  background: #faf8f5;
  font-family: 'Inter', sans-serif;
}

.products__editorial {
  display: flex;
  flex-direction: column;
  gap: 8rem;
}

.editorial-card {
  text-decoration: none;
  color: inherit;
  display: block;
}

.editorial-wrapper {
  display: flex;
  align-items: center;
  gap: 6rem;
  transition: all .6s cubic-bezier(.22,.61,.36,1);
}

.editorial-wrapper.reverse {
  flex-direction: row-reverse;
}

/* IMAGE */
.editorial-image {
  flex: 1.2;
}

.editorial-image img {
  width: 100%;
  border-radius: 28px;
  transition: transform .8s cubic-bezier(.22,.61,.36,1);
}

.editorial-card:hover .editorial-image img {
  transform: scale(1.05);
}

/* CONTENT */
.editorial-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.editorial-vendor {
  font-size: 12px;
  letter-spacing: 2px;
  text-transform: uppercase;
  color: #777;
}

.editorial-title {
  font-family: 'Playfair Display', serif;
  font-size: 48px;
  line-height: 1.2;
  font-weight: 600;
  color: #111;
}

.editorial-price {
  font-size: 22px;
  font-weight: 600;
  color: #111;
  margin-top: 0.5rem;
}

.editorial-cta {
  margin-top: 2rem;
  font-size: 15px;
  letter-spacing: 1px;
  position: relative;
  width: fit-content;
}

.editorial-cta::after {
  content: "";
  position: absolute;
  bottom: -4px;
  left: 0;
  width: 0%;
  height: 1px;
  background: #111;
  transition: width .4s ease;
}

.editorial-card:hover .editorial-cta::after {
  width: 100%;
}

/* ================================
   SCROLL REVEAL
================================ */

.reveal {
  opacity: 0;
  transform: translateY(60px);
  transition: all 1s cubic-bezier(.22,.61,.36,1);
}

.reveal.visible {
  opacity: 1;
  transform: translateY(0);
}

/* MOBILE STACK */
@media (max-width: 900px) {

  .collection-products__container {
    padding: 2rem 1.2rem 4rem;
  }

  .products__editorial {
    gap: 4rem;
  }

  .editorial-wrapper {
    flex-direction: column !important;
    gap: 2rem;
  }

  .editorial-title {
    font-size: 28px;
  }

  .editorial-price {
    font-size: 18px;
  }

}

</style>

<script>
document.addEventListener("DOMContentLoaded", function() {

  const reveals = document.querySelectorAll(".reveal");

  const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add("visible");
      }
    });
  }, { threshold: 0.15 });

  reveals.forEach(reveal => {
    observer.observe(reveal);
  });

});
</script>
