<form method="get" action="{{ collection.url }}" id="CollectionFiltersForm">

  <!-- TOOLBAR -->
  <div class="collection-toolbar">
    <div class="collection-toolbar-inner">

      <!-- LEFT (DESKTOP FILTERS) -->
      <div class="filters-left">
        {% for filter in collection.filters %}
          <div class="filter-dropdown">
            <button type="button" class="filter-btn">
              {{ filter.label }}
              <span class="arrow"></span>
            </button>

            <div class="filter-content">
              {% case filter.type %}

                {% when 'boolean' or 'list' %}
                  {% for value in filter.values %}
                    <label class="filter-option">
                      <input type="checkbox"
                        name="{{ value.param_name }}"
                        value="{{ value.value }}"
                        {% if value.active %}checked{% endif %}
                        onchange="this.form.submit()">
                      {{ value.label }}
                    </label>
                  {% endfor %}

                {% when 'price_range' %}
                <div class="price-slider">

                  <div class="slider-track"></div>

                  <input type="range"
                    min="{{ filter.range_min | money_without_currency | replace: ',', '' }}"
                    max="{{ filter.range_max | money_without_currency | replace: ',', '' }}"
                    value="{{ filter.min_value.value | default: filter.range_min }}"
                    id="minRange"
                    class="range-input">

                  <input type="range"
                    min="{{ filter.range_min | money_without_currency | replace: ',', '' }}"
                    max="{{ filter.range_max | money_without_currency | replace: ',', '' }}"
                    value="{{ filter.max_value.value | default: filter.range_max }}"
                    id="maxRange"
                    class="range-input">

                  <div class="price-values">
                    <span id="minValue"></span>
                    <span id="maxValue"></span>
                  </div>

                  <input type="hidden" name="{{ filter.min_value.param_name }}" id="minPrice">
                  <input type="hidden" name="{{ filter.max_value.param_name }}" id="maxPrice">

                  <button type="submit" class="apply-btn">Apply</button>
                </div>

              {% endcase %}
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- RIGHT -->
      <div class="filters-right">
        <span class="results-count">
          {{ collection.products_count }} items
        </span>

        <select class="sort-select"
          onchange="window.location.href=this.value">
          {% assign current_sort = collection.sort_by | default: collection.default_sort_by %}
          {% for option in collection.sort_options %}
            <option value="{{ collection.url }}?sort_by={{ option.value }}"
              {% if option.value == current_sort %}selected{% endif %}>
              {{ option.name }}
            </option>
          {% endfor %}
        </select>
      </div>

    </div>
  </div>
<script>
document.addEventListener("DOMContentLoaded", function() {

  const dropdowns = document.querySelectorAll(".filter-dropdown");

  dropdowns.forEach(drop => {
    const btn = drop.querySelector(".filter-btn");

    btn.addEventListener("click", function(e) {
      e.preventDefault();
      e.stopPropagation();

      const alreadyOpen = drop.classList.contains("active");

      dropdowns.forEach(d => d.classList.remove("active"));

      if (!alreadyOpen) {
        drop.classList.add("active");
      }
    });
  });

  document.addEventListener("click", function(e) {
    if (!e.target.closest(".filter-dropdown")) {
      dropdowns.forEach(drop => drop.classList.remove("active"));
    }
  });

});
</script>



</form>

{% schema %}
{
  "name": "Collection Filters"
}
{% endschema %}

<style>
/* ================================
   ROOTBOUND CLEAN TOOLBAR
================================ */

.collection-toolbar {
  width: 100%;
  background: #ffffff;
  border-bottom: 1px solid rgba(0,0,0,0.06);
  position: sticky;
  top: 0;
  z-index: 100;
}

.collection-toolbar-inner {
  max-width: 1300px;
  margin: 0 auto;
  padding: 18px 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* ALIGNMENT */
.filters-left,
.filters-right {
  display: flex;
  align-items: center;
  gap: 16px;
}

/* FILTER BUTTON */
.filter-dropdown {
  position: relative;
}

.filter-btn {
  background: #f6f3ef;
  border: 1px solid rgba(0,0,0,0.12);
  padding: 8px 18px;
  border-radius: 40px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 6px;
  transition: .2s ease;
  color: #222;
}

.filter-btn:hover {
  border-color: #000;
  background: #ece7e1;
}

/* ARROW */
.arrow {
  width: 6px;
  height: 6px;
  border-right: 2px solid #222;
  border-bottom: 2px solid #222;
  transform: rotate(45deg);
  transition: .3s ease;
}

.filter-dropdown.active .arrow {
  transform: rotate(-135deg);
}

/* DROPDOWN PANEL */
.filter-content {
  position: absolute;
  top: 115%;
  left: 0;
  background: #ffffff;
  padding: 18px;
  min-width: 240px;
  border-radius: 14px;
  box-shadow: 0 20px 50px rgba(0,0,0,0.08);
  opacity: 0;
  visibility: hidden;
  transform: translateY(8px);
  transition: .25s ease;
  z-index: 200;
}

.filter-dropdown.active .filter-content {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

/* SORT */
.sort-select {
  appearance: none;
  background: #f6f3ef;
  border: 1px solid rgba(0,0,0,0.12);
  padding: 8px 32px 8px 14px;
  border-radius: 40px;
  font-size: 14px;
  cursor: pointer;
}

/* RESULTS */
.results-count {
  font-size: 14px;
  font-weight: 500;
  color: #444;
}

/* PRICE SLIDER */
.price-slider {
  position: relative;
  width: 100%;
  padding: 20px 0 10px;
}

.slider-track {
  position: absolute;
  height: 4px;
  width: 100%;
  background: #e8e4df;
  border-radius: 4px;
  top: 26px;
}

.range-input {
  position: absolute;
  width: 100%;
  top: 20px;
  appearance: none;
  background: none;
  pointer-events: none;
}

.range-input::-webkit-slider-thumb {
  appearance: none;
  height: 18px;
  width: 18px;
  background: #111;
  border-radius: 50%;
  cursor: pointer;
  pointer-events: auto;
}

.range-input::-webkit-slider-runnable-track {
  background: transparent;
}

.price-values {
  display: flex;
  justify-content: space-between;
  margin-top: 40px;
  font-size: 13px;
  color: #444;
}

.apply-btn {
  margin-top: 12px;
  width: 100%;
  border-radius: 30px;
  padding: 10px;
  background: #111;
  color: #fff;
  border: none;
  cursor: pointer;
}

/* ================================
   MOBILE CLEAN VERSION
================================ */

@media (max-width: 768px) {

  .collection-toolbar-inner {
    flex-direction: column;
    align-items: stretch;
    gap: 14px;
  }

  .filters-left {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    overflow: visible !important;
  }

  .filter-dropdown {
    position: relative;
  }

  .filter-content {
    position: fixed; /* KEY FIX */
    left: 16px;
    right: 16px;
    top: auto;
    margin-top: 12px;
    min-width: unset;
  }

}

</style>
