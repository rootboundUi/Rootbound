<form method="get" action="{{ collection.url }}">
  <!-- FILTER SECTION HERE -->
  <section class="collection-filters">
  <div class="filters-wrapper">

    <!-- LEFT FILTERS -->
    <div class="filters-left">

      {% for filter in collection.filters %}
        <details class="filter-dropdown">
          <summary class="filter-btn">
            {{ filter.label }}
          </summary>

          <div class="filter-content">

            {% case filter.type %}

              {% when 'boolean' %}
                {% for value in filter.values %}
                  <label class="filter-option">
                    <input type="checkbox"
                      name="{{ value.param_name }}"
                      value="{{ value.value }}"
                      {% if value.active %}checked{% endif %}
                      onchange="this.form.submit()">
                    {{ value.label }} ({{ value.count }})
                  </label>
                {% endfor %}

              {% when 'list' %}
                {% for value in filter.values %}
                  <label class="filter-option">
                    <input type="checkbox"
                      name="{{ value.param_name }}"
                      value="{{ value.value }}"
                      {% if value.active %}checked{% endif %}
                      onchange="this.form.submit()">
                    {{ value.label }} ({{ value.count }})
                  </label>
                {% endfor %}

              {% when 'price_range' %}
                <div class="price-range">
                  <input type="number"
                    name="{{ filter.min_value.param_name }}"
                    placeholder="Min"
                    value="{{ filter.min_value.value }}">
                  <input type="number"
                    name="{{ filter.max_value.param_name }}"
                    placeholder="Max"
                    value="{{ filter.max_value.value }}">
                  <button type="submit" class="apply-btn">Apply</button>
                </div>

            {% endcase %}

          </div>
        </details>
      {% endfor %}

    </div>

    <!-- RIGHT SIDE -->
    <div class="filters-right">
      <span class="results-count">
        {{ collection.products_count }} items
      </span>

      <div class="sort-wrapper">
        <select class="sort-select"
          onchange="window.location.href=this.value">

          {% assign current_sort = collection.sort_by | default: collection.default_sort_by %}

          {% for option in collection.sort_options %}
            <option
              value="{{ collection.url }}?sort_by={{ option.value }}"
              {% if option.value == current_sort %}selected{% endif %}>
              {{ option.name }}
            </option>
          {% endfor %}

        </select>
      </div>

    </div>

  </div>
</section>

</form>




{% schema %}
{
  "name": "Collection Filters"
}
{% endschema %}

<style>
/* ========================== */
/* MODERN FILTER BAR */
/* ========================== */

.collection-filters {
  background:rgb(255, 255, 255); /* soft luxury tone */
  padding: 1.2rem 0;
  border-bottom: 1px solid rgba(0,0,0,0.05);
}

.filters-wrapper {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;

  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* LEFT SIDE */
.filters-left {
  display: flex;
  gap: 2.5rem;
  align-items: center;
}

/* FILTER BUTTON */
.filter-btn {
  background: none;
  border: none;
  font-size: 14px;
  font-weight: 500;
  color: #222;
  cursor: pointer;
  position: relative;
  padding-bottom: 4px;
  transition: all 0.3s ease;
}

/* Underline hover effect */
.filter-btn::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0%;
  height: 1px;
  background: #111;
  transition: width 0.3s ease;
}

.filter-btn:hover::after {
  width: 100%;
}

/* RIGHT SIDE */
.filters-right {
  display: flex;
  align-items: center;
  gap: 2rem;
}

.results-count {
  font-size: 13px;
  color: #666;
}

.sort-select {
  border: none;
  background: none;
  font-size: 14px;
  cursor: pointer;
  color: #222;
}

/* MOBILE */
@media (max-width: 768px) {

  .filters-wrapper {
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .filters-left {
    gap: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .filters-right {
    justify-content: center;
  }
}


</style>
