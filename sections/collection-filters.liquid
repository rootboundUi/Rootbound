<section class="collection-filters">
  <div class="filters-bar">

    <!-- LEFT FILTERS -->
    <div class="filters-left">
      {% for filter in collection.filters %}
        <div class="filter-dropdown">
          <button class="filter-trigger">
            {{ filter.label }}
            <span class="chevron">⌄</span>
          </button>

          <div class="filter-panel">
            {% for value in filter.values %}
              <label>
                <input 
                  type="checkbox"
                  name="filter.{{ filter.param_name }}"
                  value="{{ value.param_name }}"
                >
                {{ value.label }}
              </label>
            {% endfor %}
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- RIGHT SIDE -->
    <div class="filters-right">
      <span class="results-count">
        {{ collection.products.size }} items
      </span>

      <select class="sort-select" onchange="location = this.value">
        <option value="{{ collection.url }}">Sort</option>
        <option value="{{ collection.url }}?sort_by=best-selling">Best Selling</option>
        <option value="{{ collection.url }}?sort_by=price-ascending">Price ↑</option>
        <option value="{{ collection.url }}?sort_by=price-descending">Price ↓</option>
      </select>
    </div>

  </div>
</section>


{% schema %}
{
  "name": "Collection Filters"
}
{% endschema %}

<style>
/* =============================== */
/* PREMIUM TOP FILTER BAR */
/* =============================== */

.collection-filters {
  padding: 1.5rem 2rem;
  border-bottom: 1px solid rgba(0,0,0,0.08);
}

.filters__container {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

/* ================= */
/* FILTER ROW */
/* ================= */

.filters__sidebar {
  display: flex;
  align-items: center;
  gap: 3rem;
  flex-wrap: wrap;
  padding: 0;
  background: transparent;
  border: none;
}

/* Each filter group inline */
.filter-group {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  margin: 0;
}

/* Title */
.filter-title {
  font-size: 11px;
  letter-spacing: 2px;
  text-transform: uppercase;
  margin: 0;
  color: #111;
}

/* Price Inline */
.price-range {
  display: flex;
  align-items: center;
  gap: 0.8rem;
}

.price-input {
  width: 80px;
  border: none;
  border-bottom: 1px solid rgba(0,0,0,0.2);
  padding: 0.4rem 0;
  background: transparent;
  font-size: 13px;
  outline: none;
}

.price-input:focus {
  border-bottom: 1px solid #000;
}

/* Availability inline */
.filter-options {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  list-style: none;
  padding: 0;
  margin: 0;
}

.filter-label {
  display: flex;
  align-items: center;
  gap: 0.4rem;
  font-size: 13px;
  color: #333;
  cursor: pointer;
}

.filter-label input {
  accent-color: #111;
  width: 14px;
  height: 14px;
}

/* Apply Button Small */
.button--primary {
  background: #111;
  color: #fff;
  padding: 0.6rem 1.2rem;
  font-size: 11px;
  letter-spacing: 2px;
  text-transform: uppercase;
  border: none;
  cursor: pointer;
  transition: opacity 0.3s ease;
}

.button--primary:hover {
  opacity: 0.8;
}

/* ================= */
/* RESULTS + SORT */
/* ================= */

.filters__main {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.results-count {
  font-size: 13px;
  color: #555;
}

#sort-select {
  border: none;
  border-bottom: 1px solid rgba(0,0,0,0.3);
  background: transparent;
  padding: 0.4rem 0;
  font-size: 13px;
  cursor: pointer;
  outline: none;
}

/* ================= */
/* MOBILE */
/* ================= */

@media (max-width: 768px) {

  .filters__sidebar {
    flex-direction: column;
    align-items: flex-start;
    gap: 1.5rem;
  }

  .filters__main {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  #sort-select {
    width: 100%;
  }
}

</style>
