<form method="get" action="{{ collection.url }}" id="CollectionFiltersForm">

  <div class="collection-toolbar">

    <!-- LEFT SIDE FILTERS -->
    <div class="filters-left">
      {% for filter in collection.filters %}
        <div class="filter-dropdown">
          <button type="button" class="filter-btn">
            {{ filter.label }}
            <span class="arrow"></span>
          </button>

          <div class="filter-content">
            {% case filter.type %}

              {% when 'boolean' or 'list' %}
                {% for value in filter.values %}
                  <label class="filter-option">
                    <input type="checkbox"
                      name="{{ value.param_name }}"
                      value="{{ value.value }}"
                      {% if value.active %}checked{% endif %}
                      onchange="this.form.submit()">
                    {{ value.label }}
                  </label>
                {% endfor %}

              {% when 'price_range' %}
                <div class="price-range">
                  <input type="number"
                    name="{{ filter.min_value.param_name }}"
                    placeholder="Min"
                    value="{{ filter.min_value.value }}">
                  <input type="number"
                    name="{{ filter.max_value.param_name }}"
                    placeholder="Max"
                    value="{{ filter.max_value.value }}">
                  <button type="submit" class="apply-btn">Apply</button>
                </div>

            {% endcase %}
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- RIGHT SIDE -->
    <div class="filters-right">
      <span class="results-count">
        {{ collection.products_count }} items
      </span>

      <select class="sort-select"
        onchange="window.location.href=this.value">
        {% assign current_sort = collection.sort_by | default: collection.default_sort_by %}
        {% for option in collection.sort_options %}
          <option value="{{ collection.url }}?sort_by={{ option.value }}"
            {% if option.value == current_sort %}selected{% endif %}>
            {{ option.name }}
          </option>
        {% endfor %}
      </select>
    </div>

  </div>

  <!-- ACTIVE FILTER TAGS -->
  {% if collection.filters != blank %}
    <div class="active-filters">
      {% for filter in collection.filters %}
        {% for value in filter.active_values %}
          <a href="{{ value.url_to_remove }}" class="active-pill">
            {{ value.label }} ✕
          </a>
        {% endfor %}
      {% endfor %}

      {% if collection.current_vendor or collection.current_type or collection.current_tags %}
        <a href="{{ collection.url }}" class="clear-all">
          Clear all
        </a>
      {% endif %}
    </div>
  {% endif %}


<script>
document.addEventListener("DOMContentLoaded", function() {

  const dropdowns = document.querySelectorAll(".filter-dropdown");

  dropdowns.forEach(drop => {
    const btn = drop.querySelector(".filter-btn");

    btn.addEventListener("click", function(e) {
      e.stopPropagation();

      dropdowns.forEach(d => {
        if (d !== drop) d.classList.remove("active");
      });

      drop.classList.toggle("active");
    });
  });

  document.addEventListener("click", function() {
    dropdowns.forEach(drop => drop.classList.remove("active"));
  });

});
</script>

</form>




{% schema %}
{
  "name": "Collection Filters"
}
{% endschema %}

<style>
/* ===========================
   PREMIUM FILTER + SORT BAR
   =========================== */

.collection-filters {
  background: #fff;
  padding: 1.8rem 0;
  border-bottom: 1px solid rgba(0,0,0,0.08);
  font-family: 'Inter', sans-serif;
}

.filters-wrapper {
  max-width: 1300px;
  margin: 0 auto;
  padding: 0 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 2rem;
}

/* ===== FILTER BUTTONS ===== */
.filter-dropdown {
  position: relative;
}

.filter-btn {
  background: #fff;
  border: 1px solid rgba(0,0,0,0.14);
  padding: 10px 18px;
  font-size: 14px;
  font-weight: 500;
  color: #222;
  border-radius: 32px;
  cursor: pointer;
  display: inline-flex;
  align-items: center;
  gap: 6px;
  transition: 0.28s ease;
}

.filter-btn:hover {
  background: rgba(0,0,0,0.02);
  border-color: #111;
  transform: translateY(-2px);
}

/* Arrow indicator */
.filter-btn .arrow {
  width: 6px;
  height: 6px;
  border-right: 2px solid #222;
  border-bottom: 2px solid #222;
  transform: rotate(45deg);
  transition: transform 0.3s ease;
}

.filter-dropdown.active .arrow {
  transform: rotate(-135deg);
}

/* Dropdown panel */
.filter-content {
  position: absolute;
  top: 140%;
  left: 0;
  background: #fff;
  padding: 1.4rem;
  min-width: 260px;
  border-radius: 14px;
  box-shadow: 0 16px 40px rgba(0,0,0,0.09);
  opacity: 0;
  visibility: hidden;
  transform: translateY(8px);
  transition: all 0.28s ease;
  pointer-events: none;
  z-index: 120;
}

.filter-dropdown.active .filter-content {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
  pointer-events: auto;
}

/* Filter options */
.filter-option {
  font-size: 13px;
  margin-bottom: 10px;
  display: block;
  cursor: pointer;
  color: #333;
  transition: 0.22s ease;
}
.filter-option:hover {
  color: #000;
}

/* Input boxes inside filters */
.filter-content input[type="number"],
.filter-content input[type="text"] {
  width: 85px;
  padding: 8px 10px;
  font-size: 13px;
  border: 1px solid #ddd;
  border-radius: 8px;
  margin-right: 8px;
  transition: border 0.25s ease;
}
.filter-content input:focus {
  border-color: #111;
  outline: none;
}

/* Apply button */
.apply-btn {
  background: #000;
  color: #fff;
  border: none;
  padding: 8px 14px;
  font-size: 12px;
  border-radius: 20px;
  cursor: pointer;
  transition: 0.28s ease;
}
.apply-btn:hover {
  background: #222;
  transform: translateY(-1px);
}

/* ===== SORT DROPDOWN ===== */
.sort-wrapper {
  position: relative;
}

.sort-select {
  appearance: none;
  background: #f7f5f2;
  border: 1px solid rgba(0,0,0,0.12);
  padding: 10px 36px 10px 14px;
  border-radius: 30px;
  font-size: 14px;
  font-weight: 500;
  color: #222;
  cursor: pointer;
  transition: 0.28s ease;
}

.sort-select:hover {
  border-color: #111;
  transform: translateY(-1px);
}

/* Arrow for sort */
.sort-wrapper::after {
  content: "▾";
  position: absolute;
  right: 14px;
  top: 50%;
  transform: translateY(-50%);
  pointer-events: none;
  font-size: 12px;
  color: #333;
}

/* Results count */
.results-count {
  font-size: 13px;
  color: #555;
  font-weight: 500;
}

/* Responsive small screen */
@media (max-width: 768px) {
  .filters-wrapper {
    flex-direction: column;
    gap: 1rem;
    align-items: flex-start;
  }
}


</style>
