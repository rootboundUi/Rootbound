<section class="collection-filters">
  <div class="filters__container">
    <div class="filters__sidebar">
      <form class="filters-form" id="filters-form" action="{{ collection.url }}">
        <!-- Price Filter -->
        <div class="filter-group">
          <h3 class="filter-title">Price</h3>
          <div class="price-range">
            <input 
              type="number" 
              name="filter.p.price.gte"
              placeholder="Min"
              class="price-input"
            >
            <span>-</span>
            <input 
              type="number" 
              name="filter.p.price.lte"
              placeholder="Max"
              class="price-input"
            >
          </div>
        </div>

        <!-- Filter by Available Options -->
        {% for filter in collection.filters %}
          {% case filter.type %}
            {% when "price_range" %}
              <!-- Handled above -->
            {% else %}
              <div class="filter-group">
                <h3 class="filter-title">{{ filter.label }}</h3>
                <ul class="filter-options">
                  {% for filter_value in filter.values %}
                    <li>
                      <label class="filter-label">
                        <input 
                          type="checkbox" 
                          name="filter.{{ filter.param_name }}"
                          value="{{ filter_value.param_name }}"
                          {{ filter_value.active | default: false }}
                        >
                        <span>{{ filter_value.label }}</span>
                      </label>
                    </li>
                  {% endfor %}
                </ul>
              </div>
          {% endcase %}
        {% endfor %}

        <button type="submit" class="button button--primary">Apply Filters</button>
      </form>
    </div>

    <!-- Sort & Results -->
    <div class="filters__main">
      <div class="filters__header">
        <p class="results-count">
          Showing {{ collection.products.size }} products
        </p>
        <select id="sort-select" onchange="location = this.value">
          <option value="{{ collection.url }}">Sort by</option>
          <option value="{{ collection.url }}?sort_by=best-selling">Best Selling</option>
          <option value="{{ collection.url }}?sort_by=title-ascending">A-Z</option>
          <option value="{{ collection.url }}?sort_by=title-descending">Z-A</option>
          <option value="{{ collection.url }}?sort_by=price-ascending">Price: Low to High</option>
          <option value="{{ collection.url }}?sort_by=price-descending">Price: High to Low</option>
          <option value="{{ collection.url }}?sort_by=created-descending">Newest</option>
        </select>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection Filters"
}
{% endschema %}

<style>
/* ================================= */
/* MINIMAL LUXURY COLLECTION FILTERS */
/* ================================= */

.collection-filters {
  padding: 4rem 2rem;
  max-width: 1400px;
  margin: 0 auto;
}

/* Layout */
.filters__container {
  display: grid;
  grid-template-columns: 260px 1fr;
  gap: 4rem;
}

/* ================= */
/* SIDEBAR */
/* ================= */

.filters__sidebar {
  background: transparent;
  padding: 0;
  border-right: 1px solid rgba(0,0,0,0.08);
}

/* Filter Groups */
.filter-group {
  margin-bottom: 3rem;
}

.filter-title {
  font-size: 11px;
  letter-spacing: 3px;
  text-transform: uppercase;
  margin-bottom: 1.5rem;
  color: #111;
}

/* Price */
.price-range {
  display: flex;
  gap: 1rem;
  align-items: center;
}

.price-input {
  flex: 1;
  border: none;
  border-bottom: 1px solid rgba(0,0,0,0.2);
  padding: 0.6rem 0;
  background: transparent;
  font-size: 14px;
  outline: none;
  transition: border 0.3s ease;
}

.price-input:focus {
  border-bottom: 1px solid #000;
}

/* Checkbox Filters */
.filter-options {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 0.8rem;
}

.filter-label {
  display: flex;
  align-items: center;
  gap: 0.6rem;
  font-size: 14px;
  color: #333;
  cursor: pointer;
  transition: opacity 0.3s ease;
}

.filter-label:hover {
  opacity: 0.6;
}

.filter-label input {
  accent-color: #111;
  width: 14px;
  height: 14px;
}

/* Apply Button */
.button--primary {
  margin-top: 2rem;
  background: #111;
  color: #fff;
  padding: 0.8rem 1.6rem;
  font-size: 12px;
  letter-spacing: 2px;
  text-transform: uppercase;
  border: none;
  cursor: pointer;
  transition: opacity 0.3s ease;
}

.button--primary:hover {
  opacity: 0.8;
}

/* ================= */
/* HEADER (RESULTS + SORT) */
/* ================= */

.filters__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 3rem;
}

.results-count {
  font-size: 14px;
  color: #555;
  letter-spacing: 0.5px;
}

/* Sort dropdown minimal */
#sort-select {
  border: none;
  border-bottom: 1px solid rgba(0,0,0,0.3);
  background: transparent;
  padding: 0.6rem 0;
  font-size: 14px;
  cursor: pointer;
  outline: none;
}

/* ================================= */
/* MOBILE OPTIMIZATION */
/* ================================= */

@media (max-width: 768px) {

  .collection-filters {
    padding: 2rem 1.5rem;
  }

  .filters__container {
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  /* Sidebar becomes top filter row */
  .filters__sidebar {
    border-right: none;
    border-bottom: 1px solid rgba(0,0,0,0.08);
    padding-bottom: 2rem;
  }

  .filter-group {
    margin-bottom: 2rem;
  }

  /* Better stacked layout */
  .filters__header {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  #sort-select {
    width: 100%;
  }

  .button--primary {
    width: 100%;
    text-align: center;
  }
}

</style>
