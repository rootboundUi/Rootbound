<section class="collection-filters">
  <div class="filters__container">
    <div class="filters__sidebar">
      <form class="filters-form" id="filters-form" action="{{ collection.url }}">
        <!-- Price Filter -->
        <div class="filter-group">
          <h3 class="filter-title">Price</h3>
          <div class="price-range">
            <input 
              type="number" 
              name="filter.p.price.gte"
              placeholder="Min"
              class="price-input"
            >
            <span>-</span>
            <input 
              type="number" 
              name="filter.p.price.lte"
              placeholder="Max"
              class="price-input"
            >
          </div>
        </div>

        <!-- Filter by Available Options -->
        {% for filter in collection.filters %}
          {% case filter.type %}
            {% when "price_range" %}
              <!-- Handled above -->
            {% else %}
              <div class="filter-group">
                <h3 class="filter-title">{{ filter.label }}</h3>
                <ul class="filter-options">
                  {% for filter_value in filter.values %}
                    <li>
                      <label class="filter-label">
                        <input 
                          type="checkbox" 
                          name="filter.{{ filter.param_name }}"
                          value="{{ filter_value.param_name }}"
                          {{ filter_value.active | default: false }}
                        >
                        <span>{{ filter_value.label }}</span>
                      </label>
                    </li>
                  {% endfor %}
                </ul>
              </div>
          {% endcase %}
        {% endfor %}

        <button type="submit" class="button button--primary">Apply Filters</button>
      </form>
    </div>

    <!-- Sort & Results -->
    <div class="filters__main">
      <div class="filters__header">
        <p class="results-count">
          Showing {{ collection.products.size }} products
        </p>
        <select id="sort-select" onchange="location = this.value">
          <option value="{{ collection.url }}">Sort by</option>
          <option value="{{ collection.url }}?sort_by=best-selling">Best Selling</option>
          <option value="{{ collection.url }}?sort_by=title-ascending">A-Z</option>
          <option value="{{ collection.url }}?sort_by=title-descending">Z-A</option>
          <option value="{{ collection.url }}?sort_by=price-ascending">Price: Low to High</option>
          <option value="{{ collection.url }}?sort_by=price-descending">Price: High to Low</option>
          <option value="{{ collection.url }}?sort_by=created-descending">Newest</option>
        </select>
      </div>
    </div>
  </div>
</section>


<style>
.collection-filters {
  padding: 2rem 1.5rem;
  max-width: 1440px;
  margin: 0 auto;
}

.filters__container {
  display: grid;
  grid-template-columns: 200px 1fr;
  gap: 2rem;
}

.filters__sidebar {
  background: var(--color-light-bg);
  padding: 1.5rem;
  border-radius: 4px;
  height: fit-content;
}

.filter-group {
  margin-bottom: 2rem;
}

.filter-group:last-child {
  margin-bottom: 1.5rem;
}

.filter-title {
  font-size: 0.875rem;
  font-weight: 700;
  text-transform: uppercase;
  margin: 0 0 1rem 0;
  color: var(--color-text);
}

.price-range {
  display: flex;
  gap: 0.5rem;
  align-items: center;
}

.price-input {
  flex: 1;
  padding: 0.5rem;
  border: 1px solid #ddd;
  border-radius: 2px;
}

.filter-options {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.filter-label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  cursor: pointer;
  font-size: 0.875rem;
  color: #666;
}

.filter-label input {
  cursor: pointer;
}

.filters__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
}

.results-count {
  color: #666;
  margin: 0;
  font-size: 0.875rem;
}

#sort-select {
  padding: 0.5rem;
  border: 1px solid #ddd;
  border-radius: 2px;
  background: #fff;
  cursor: pointer;
}

@media (max-width: 768px) {
  .filters__container {
    grid-template-columns: 1fr;
  }

  .filters__sidebar {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    height: auto;
  }
}
</style>
