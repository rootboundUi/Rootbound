<section class="collection-filters">
  <div class="filters-wrapper">

    <!-- LEFT FILTERS -->
    <div class="filters-left">

      <div class="filter-item">
        <button class="filter-btn">Availability</button>
      </div>

      <div class="filter-item">
        <button class="filter-btn">Price</button>
      </div>

      <div class="filter-item">
        <button class="filter-btn">Size</button>
      </div>

      <div class="filter-item">
        <button class="filter-btn">Color</button>
      </div>

    </div>

    <!-- RIGHT SIDE -->
    <div class="filters-right">
      <span class="results-count">
        {{ collection.products.size }} items
      </span>

      <select class="sort-select" onchange="location = this.value">
        <option value="{{ collection.url }}">Sort</option>
        <option value="{{ collection.url }}?sort_by=best-selling">Best Selling</option>
        <option value="{{ collection.url }}?sort_by=price-ascending">Price ↑</option>
        <option value="{{ collection.url }}?sort_by=price-descending">Price ↓</option>
        <option value="{{ collection.url }}?sort_by=created-descending">Newest</option>
      </select>
    </div>

  </div>
</section>



{% schema %}
{
  "name": "Collection Filters"
}
{% endschema %}

<style>
/* ========================= */
/* PREMIUM FILTER HEADER */
/* ========================= */

.collection-filters {
  border-bottom: 1px solid rgba(0,0,0,0.08);
  padding: 1rem 2rem;
  background: #fff;
}

.filters-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 2rem;
}

/* LEFT SIDE */
.filters-left {
  display: center;
  gap: 2rem;
  align-items: center;
}

.filter-dropdown {
  position: relative;
}

.filter-trigger {
  background: none;
  border: none;
  font-size: 13px;
  color: #111;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 0;
}

.chevron {
  font-size: 10px;
}

/* Dropdown Panel */
.filter-panel {
  position: absolute;
  top: 120%;
  left: 0;
  background: #fff;
  border: 1px solid rgba(0,0,0,0.08);
  padding: 1rem;
  min-width: 180px;
  display: none;
  flex-direction: column;
  gap: 0.5rem;
  z-index: 10;
}

.filter-dropdown:hover .filter-panel {
  display: flex;
}

.filter-panel label {
  font-size: 13px;
  cursor: pointer;
  display: flex;
  gap: 0.5rem;
}

/* RIGHT SIDE */
.filters-right {
  display: flex;
  align-items: center;
  gap: 1.5rem;
}

.results-count {
  font-size: 13px;
  color: #666;
}

.sort-select {
  border: none;
  font-size: 13px;
  cursor: pointer;
  background: none;
}

/* MOBILE */
@media (max-width: 768px) {

  .filters-bar {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  .filters-left {
    overflow-x: auto;
    width: 100%;
  }

  .filters-right {
    width: 100%;
    justify-content: space-between;
  }
}

</style>
