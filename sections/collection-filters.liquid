<section class="collection-filters">
  <div class="filters__container">
    <div class="filters__sidebar">
      <form class="filters-form" id="filters-form" action="{{ collection.url }}">
        <!-- Price Filter -->
        <div class="filter-group">
          <h3 class="filter-title">Price</h3>
          <div class="price-range">
            <input 
              type="number" 
              name="filter.p.price.gte"
              placeholder="Min"
              class="price-input"
            >
            <span>-</span>
            <input 
              type="number" 
              name="filter.p.price.lte"
              placeholder="Max"
              class="price-input"
            >
          </div>
        </div>

        <!-- Filter by Available Options -->
        {% for filter in collection.filters %}
          {% case filter.type %}
            {% when "price_range" %}
              <!-- Handled above -->
            {% else %}
              <div class="filter-group">
                <h3 class="filter-title">{{ filter.label }}</h3>
                <ul class="filter-options">
                  {% for filter_value in filter.values %}
                    <li>
                      <label class="filter-label">
                        <input 
                          type="checkbox" 
                          name="filter.{{ filter.param_name }}"
                          value="{{ filter_value.param_name }}"
                          {{ filter_value.active | default: false }}
                        >
                        <span>{{ filter_value.label }}</span>
                      </label>
                    </li>
                  {% endfor %}
                </ul>
              </div>
          {% endcase %}
        {% endfor %}

        <button type="submit" class="button button--primary">Apply Filters</button>
      </form>
    </div>

    <!-- Sort & Results -->
    <div class="filters__main">
      <div class="filters__header">
        <p class="results-count">
          Showing {{ collection.products.size }} products
        </p>
        <select id="sort-select" onchange="location = this.value">
          <option value="{{ collection.url }}">Sort by</option>
          <option value="{{ collection.url }}?sort_by=best-selling">Best Selling</option>
          <option value="{{ collection.url }}?sort_by=title-ascending">A-Z</option>
          <option value="{{ collection.url }}?sort_by=title-descending">Z-A</option>
          <option value="{{ collection.url }}?sort_by=price-ascending">Price: Low to High</option>
          <option value="{{ collection.url }}?sort_by=price-descending">Price: High to Low</option>
          <option value="{{ collection.url }}?sort_by=created-descending">Newest</option>
        </select>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection Filters"
}
{% endschema %}

<style>
/* =============================== */
/* PREMIUM TOP FILTER BAR */
/* =============================== */

.collection-filters {
  padding: 1.5rem 2rem;
  border-bottom: 1px solid rgba(0,0,0,0.08);
}

.filters__container {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

/* ================= */
/* FILTER ROW */
/* ================= */

.filters__sidebar {
  display: flex;
  align-items: center;
  gap: 3rem;
  flex-wrap: wrap;
  padding: 0;
  background: transparent;
  border: none;
}

/* Each filter group inline */
.filter-group {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  margin: 0;
}

/* Title */
.filter-title {
  font-size: 11px;
  letter-spacing: 2px;
  text-transform: uppercase;
  margin: 0;
  color: #111;
}

/* Price Inline */
.price-range {
  display: flex;
  align-items: center;
  gap: 0.8rem;
}

.price-input {
  width: 80px;
  border: none;
  border-bottom: 1px solid rgba(0,0,0,0.2);
  padding: 0.4rem 0;
  background: transparent;
  font-size: 13px;
  outline: none;
}

.price-input:focus {
  border-bottom: 1px solid #000;
}

/* Availability inline */
.filter-options {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  list-style: none;
  padding: 0;
  margin: 0;
}

.filter-label {
  display: flex;
  align-items: center;
  gap: 0.4rem;
  font-size: 13px;
  color: #333;
  cursor: pointer;
}

.filter-label input {
  accent-color: #111;
  width: 14px;
  height: 14px;
}

/* Apply Button Small */
.button--primary {
  background: #111;
  color: #fff;
  padding: 0.6rem 1.2rem;
  font-size: 11px;
  letter-spacing: 2px;
  text-transform: uppercase;
  border: none;
  cursor: pointer;
  transition: opacity 0.3s ease;
}

.button--primary:hover {
  opacity: 0.8;
}

/* ================= */
/* RESULTS + SORT */
/* ================= */

.filters__main {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.results-count {
  font-size: 13px;
  color: #555;
}

#sort-select {
  border: none;
  border-bottom: 1px solid rgba(0,0,0,0.3);
  background: transparent;
  padding: 0.4rem 0;
  font-size: 13px;
  cursor: pointer;
  outline: none;
}

/* ================= */
/* MOBILE */
/* ================= */

@media (max-width: 768px) {

  .filters__sidebar {
    flex-direction: column;
    align-items: flex-start;
    gap: 1.5rem;
  }

  .filters__main {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  #sort-select {
    width: 100%;
  }
}

</style>
