<section class="collection-filters">
  <div class="filters-wrapper">

    <!-- LEFT FILTERS -->
    <div class="filters-left">

      {% for filter in collection.filters %}
        <details class="filter-dropdown">
          <summary class="filter-btn">
            {{ filter.label }}
          </summary>

          <div class="filter-content">

            {% case filter.type %}

              {% when 'boolean' %}
                {% for value in filter.values %}
                  <label class="filter-option">
                    <input type="checkbox"
                      name="{{ value.param_name }}"
                      value="{{ value.value }}"
                      {% if value.active %}checked{% endif %}
                      onchange="this.form.submit()">
                    {{ value.label }} ({{ value.count }})
                  </label>
                {% endfor %}

              {% when 'list' %}
                {% for value in filter.values %}
                  <label class="filter-option">
                    <input type="checkbox"
                      name="{{ value.param_name }}"
                      value="{{ value.value }}"
                      {% if value.active %}checked{% endif %}
                      onchange="this.form.submit()">
                    {{ value.label }} ({{ value.count }})
                  </label>
                {% endfor %}

              {% when 'price_range' %}
                <div class="price-range">
                  <input type="number"
                    name="{{ filter.min_value.param_name }}"
                    placeholder="Min"
                    value="{{ filter.min_value.value }}">
                  <input type="number"
                    name="{{ filter.max_value.param_name }}"
                    placeholder="Max"
                    value="{{ filter.max_value.value }}">
                  <button type="submit" class="apply-btn">Apply</button>
                </div>

            {% endcase %}

          </div>
        </details>
      {% endfor %}

    </div>

    <!-- RIGHT SIDE -->
    <div class="filters-right">
      <span class="results-count">
        {{ collection.products_count }} items
      </span>

      <div class="sort-wrapper">
        <select class="sort-select"
          onchange="window.location.href=this.value">

          {% assign current_sort = collection.sort_by | default: collection.default_sort_by %}

          {% for option in collection.sort_options %}
            <option
              value="{{ collection.url }}?sort_by={{ option.value }}"
              {% if option.value == current_sort %}selected{% endif %}>
              {{ option.name }}
            </option>
          {% endfor %}

        </select>
      </div>

    </div>

  </div>
</section>




{% schema %}
{
  "name": "Collection Filters"
}
{% endschema %}

<style>
.collection-filters {
  background: #fff;
  padding: 1.2rem 0;
  border-bottom: 1px solid rgba(0,0,0,0.06);
}

.filters-wrapper {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.filters-left {
  display: flex;
  gap: 2.5rem;
  align-items: center;
}

/* Filter Dropdown */
.filter-dropdown {
  position: relative;
}

.filter-btn {
  list-style: none;
  cursor: pointer;
  font-size: 14px;
  font-weight: 500;
  color: #222;
  padding-bottom: 4px;
  position: relative;
}

.filter-btn::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0%;
  height: 1px;
  background: #111;
  transition: width 0.3s ease;
}

.filter-dropdown[open] .filter-btn::after,
.filter-btn:hover::after {
  width: 100%;
}

.filter-content {
  position: absolute;
  top: 120%;
  left: 0;
  background: #fff;
  padding: 1rem;
  min-width: 220px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.08);
  border-radius: 10px;
  z-index: 100;
}

.filter-option {
  display: block;
  font-size: 13px;
  margin-bottom: 8px;
  cursor: pointer;
}

.price-range {
  display: flex;
  gap: 8px;
}

.price-range input {
  width: 80px;
  padding: 6px;
  border: 1px solid #ddd;
  border-radius: 6px;
}

.apply-btn {
  background: #111;
  color: #fff;
  border: none;
  padding: 6px 10px;
  border-radius: 6px;
  cursor: pointer;
}

/* RIGHT SIDE */
.filters-right {
  display: flex;
  align-items: center;
  gap: 2rem;
}

.results-count {
  font-size: 13px;
  color: #666;
}

/* PREMIUM SORT DROPDOWN */
.sort-wrapper {
  position: relative;
}

.sort-select {
  appearance: none;
  background: #f7f5f2;
  border: 1px solid rgba(0,0,0,0.08);
  padding: 8px 35px 8px 14px;
  border-radius: 30px;
  font-size: 13px;
  cursor: pointer;
  font-weight: 500;
  transition: all 0.3s ease;
}

.sort-select:hover {
  border-color: #111;
}

.sort-wrapper::after {
  content: "â–¾";
  position: absolute;
  right: 14px;
  top: 50%;
  transform: translateY(-50%);
  pointer-events: none;
  font-size: 12px;
}

/* MOBILE */
@media (max-width: 768px) {
  .filters-wrapper {
    flex-direction: column;
    gap: 1rem;
  }

  .filters-left {
    flex-wrap: wrap;
    justify-content: center;
  }
}

</style>
