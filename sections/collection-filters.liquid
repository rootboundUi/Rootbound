<section class="collection-filters">
  <div class="filters-wrapper">

    <!-- LEFT FILTERS -->
    <div class="filters-left">

      <div class="filter-item">
        <button class="filter-btn">Availability</button>
      </div>

      <div class="filter-item">
        <button class="filter-btn">Price</button>
      </div>

      <div class="filter-item">
        <button class="filter-btn">Size</button>
      </div>

      <div class="filter-item">
        <button class="filter-btn">Color</button>
      </div>

    </div>

    <!-- RIGHT SIDE -->
    <div class="filters-right">
      <span class="results-count">
        {{ collection.products.size }} items
      </span>

      <select class="sort-select" onchange="location = this.value">
        <option value="{{ collection.url }}">Sort</option>
        <option value="{{ collection.url }}?sort_by=best-selling">Best Selling</option>
        <option value="{{ collection.url }}?sort_by=price-ascending">Price ↑</option>
        <option value="{{ collection.url }}?sort_by=price-descending">Price ↓</option>
        <option value="{{ collection.url }}?sort_by=created-descending">Newest</option>
      </select>
    </div>

  </div>
</section>



{% schema %}
{
  "name": "Collection Filters"
}
{% endschema %}

<style>
/* ========================== */
/* MODERN FILTER BAR */
/* ========================== */

.collection-filters {
    background: linear-gradient(
    120deg,
    #ffe5d4,
    #fff1e8,
    #ffffff,
    #fff1e8,
    #ffe5d4
  );/* soft luxury tone */
  padding: 1.2rem 0;
  border-bottom: 1px solid rgba(0,0,0,0.05);
}

.filters-wrapper {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;

  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* LEFT SIDE */
.filters-left {
  display: flex;
  gap: 2.5rem;
  align-items: center;
}

/* FILTER BUTTON */
.filter-btn {
  background: none;
  border: none;
  font-size: 14px;
  font-weight: 500;
  color: #222;
  cursor: pointer;
  position: relative;
  padding-bottom: 4px;
  transition: all 0.3s ease;
}

/* Underline hover effect */
.filter-btn::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0%;
  height: 1px;
  background: #111;
  transition: width 0.3s ease;
}

.filter-btn:hover::after {
  width: 100%;
}

/* RIGHT SIDE */
.filters-right {
  display: flex;
  align-items: center;
  gap: 2rem;
}

.results-count {
  font-size: 13px;
  color: #666;
}

.sort-select {
  border: none;
  background: none;
  font-size: 14px;
  cursor: pointer;
  color: #222;
}

/* MOBILE */
@media (max-width: 768px) {

  .filters-wrapper {
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .filters-left {
    gap: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .filters-right {
    justify-content: center;
  }
}


</style>
