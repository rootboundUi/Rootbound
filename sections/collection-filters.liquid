<style>
/* ================================
   ROOTBOUND PREMIUM TOOLBAR
================================ */

.collection-toolbar {
  max-width: 1200px;
  margin: 0 auto;
  padding: 22px 2rem 18px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid rgba(0,0,0,0.06);
}

/* LEFT + RIGHT ALIGNMENT */
.filters-left,
.filters-right {
  display: flex;
  align-items: center;
  gap: 14px;
}

/* ================================
   FILTER BUTTONS (Luxury Style)
================================ */

.filter-dropdown {
  position: relative;
}

.filter-btn {
  background: transparent;
  border: 1px solid rgba(0,0,0,0.12);
  padding: 8px 18px;
  border-radius: 40px;
  font-size: 14px;
  font-weight: 500;
  letter-spacing: .2px;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 6px;
  transition: all .25s ease;
  color: #222;
}

/* Hover = subtle lift */
.filter-btn:hover {
  border-color: #000;
  background: rgba(0,0,0,0.03);
  transform: translateY(-1px);
}

/* Focus Accessibility */
.filter-btn:focus-visible,
.sort-select:focus-visible {
  outline: 2px solid #000;
  outline-offset: 3px;
}

/* Arrow */
.arrow {
  width: 6px;
  height: 6px;
  border-right: 2px solid #222;
  border-bottom: 2px solid #222;
  transform: rotate(45deg);
  transition: transform .3s ease;
}

.filter-dropdown.active .arrow {
  transform: rotate(-135deg);
}

/* ================================
   DROPDOWN PANEL
================================ */

.filter-content {
  position: absolute;
  top: 115%;
  left: 0;
  background: #fff;
  padding: 18px;
  min-width: 240px;
  border-radius: 16px;
  box-shadow: 0 25px 60px rgba(0,0,0,0.08);
  opacity: 0;
  visibility: hidden;
  transform: translateY(8px);
  transition: all .25s ease;
  z-index: 200;
}

.filter-dropdown.active .filter-content {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.filter-option {
  display: block;
  font-size: 13px;
  margin-bottom: 10px;
  cursor: pointer;
  color: #444;
}

.filter-option input {
  margin-right: 6px;
}

/* ================================
   SORT DROPDOWN (Premium)
================================ */

.sort-select {
  appearance: none;
  background: #f6f3ef; /* matches your header tone */
  border: 1px solid rgba(0,0,0,0.12);
  padding: 8px 34px 8px 14px;
  border-radius: 40px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: .25s ease;
  color: #222;
}

.sort-select:hover {
  border-color: #000;
  background: #f1ede8;
}

.results-count {
  font-size: 13px;
  color: #555;
  margin-right: 8px;
}

/* ================================
   ACTIVE FILTER PILLS
================================ */

.active-filters {
  max-width: 1200px;
  margin: 12px auto 0;
  padding: 0 2rem;
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}

.active-pill {
  background: #f6f3ef;
  border: 1px solid rgba(0,0,0,0.15);
  padding: 6px 14px;
  border-radius: 40px;
  font-size: 12px;
  text-decoration: none;
  color: #222;
  transition: .25s ease;
}

.active-pill:hover {
  background: #000;
  color: #fff;
}

.clear-all {
  font-size: 12px;
  text-decoration: underline;
  color: #666;
  margin-left: 6px;
  transition: .25s ease;
}

.clear-all:hover {
  color: #000;
}

/* ================================
   DARK MODE SUPPORT
================================ */

@media (prefers-color-scheme: dark) {

  .collection-toolbar {
    border-color: rgba(255,255,255,0.1);
  }

  .filter-btn {
    border-color: rgba(255,255,255,0.2);
    color: #eee;
  }

  .filter-content {
    background: #1a1a1a;
    color: #eee;
  }

  .sort-select {
    background: #1a1a1a;
    border-color: rgba(255,255,255,0.2);
    color: #eee;
  }

  .active-pill {
    background: #222;
    border-color: rgba(255,255,255,0.2);
    color: #eee;
  }
}

/* ================================
   MOBILE LAYOUT
================================ */

@media (max-width: 768px) {

  .collection-toolbar {
    flex-direction: column;
    align-items: flex-start;
    gap: 14px;
  }

  .filters-left {
    flex-wrap: wrap;
  }

}
/* ============================
   PREMIUM PRICE RANGE SLIDER
============================ */

.price-slider {
  position: relative;
  width: 100%;
  padding: 20px 0 10px;
}

/* Track background */
.slider-track {
  position: absolute;
  height: 4px;
  width: 100%;
  background: #e8e4df;
  border-radius: 4px;
  top: 26px;
}

/* Range Inputs */
.range-input {
  position: absolute;
  width: 100%;
  top: 20px;
  appearance: none;
  background: none;
  pointer-events: none;
}

/* Thumb */
.range-input::-webkit-slider-thumb {
  appearance: none;
  height: 18px;
  width: 18px;
  background: #000;
  border-radius: 50%;
  cursor: pointer;
  pointer-events: auto;
  transition: transform .2s ease;
}

.range-input::-webkit-slider-thumb:hover {
  transform: scale(1.15);
}

.range-input::-moz-range-thumb {
  height: 18px;
  width: 18px;
  background: #000;
  border-radius: 50%;
  cursor: pointer;
}

/* Remove default track */
.range-input::-webkit-slider-runnable-track {
  background: transparent;
}

.range-input::-moz-range-track {
  background: transparent;
}

/* Price values */
.price-values {
  display: flex;
  justify-content: space-between;
  margin-top: 40px;
  font-size: 13px;
  color: #444;
}

/* Apply button */
.price-slider .apply-btn {
  margin-top: 12px;
  width: 100%;
  border-radius: 30px;
  padding: 10px;
}


</style>
