<form method="get" action="{{ collection.url }}" id="CollectionFiltersForm">

  <div class="collection-toolbar">

    <!-- LEFT SIDE FILTERS -->
    <div class="filters-left">
      {% for filter in collection.filters %}
        <div class="filter-dropdown">
          <button type="button" class="filter-btn">
            {{ filter.label }}
            <span class="arrow"></span>
          </button>

          <div class="filter-content">
            {% case filter.type %}

              {% when 'boolean' or 'list' %}
                {% for value in filter.values %}
                  <label class="filter-option">
                    <input type="checkbox"
                      name="{{ value.param_name }}"
                      value="{{ value.value }}"
                      {% if value.active %}checked{% endif %}
                      onchange="this.form.submit()">
                    {{ value.label }}
                  </label>
                {% endfor %}

              {% when 'price_range' %}
                <div class="price-range">
                  <input type="number"
                    name="{{ filter.min_value.param_name }}"
                    placeholder="Min"
                    value="{{ filter.min_value.value }}">
                  <input type="number"
                    name="{{ filter.max_value.param_name }}"
                    placeholder="Max"
                    value="{{ filter.max_value.value }}">
                  <button type="submit" class="apply-btn">Apply</button>
                </div>

            {% endcase %}
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- RIGHT SIDE -->
    <div class="filters-right">
      <span class="results-count">
        {{ collection.products_count }} items
      </span>

      <select class="sort-select"
        onchange="window.location.href=this.value">
        {% assign current_sort = collection.sort_by | default: collection.default_sort_by %}
        {% for option in collection.sort_options %}
          <option value="{{ collection.url }}?sort_by={{ option.value }}"
            {% if option.value == current_sort %}selected{% endif %}>
            {{ option.name }}
          </option>
        {% endfor %}
      </select>
    </div>

  </div>

  <!-- ACTIVE FILTER TAGS -->
  {% if collection.filters != blank %}
    <div class="active-filters">
      {% for filter in collection.filters %}
        {% for value in filter.active_values %}
          <a href="{{ value.url_to_remove }}" class="active-pill">
            {{ value.label }} âœ•
          </a>
        {% endfor %}
      {% endfor %}

      {% if collection.current_vendor or collection.current_type or collection.current_tags %}
        <a href="{{ collection.url }}" class="clear-all">
          Clear all
        </a>
      {% endif %}
    </div>
  {% endif %}


<script>
document.addEventListener("DOMContentLoaded", function() {
  const dropdowns = document.querySelectorAll(".filter-dropdown");

  dropdowns.forEach(drop => {
    drop.querySelector(".filter-btn").addEventListener("click", function(e) {
      e.stopPropagation();
      dropdowns.forEach(d => d !== drop && d.classList.remove("active"));
      drop.classList.toggle("active");
    });
  });

  document.addEventListener("click", function() {
    dropdowns.forEach(drop => drop.classList.remove("active"));
  });
});
</script>


</form>




{% schema %}
{
  "name": "Collection Filters"
}
{% endschema %}

<style>
/* ==========================
   COLLECTION TOOLBAR
========================== */

.collection-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 2rem;
  padding: 1.5rem 0;
  border-bottom: 1px solid rgba(0,0,0,0.08);
}

.filters-left {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

.filters-right {
  display: flex;
  align-items: center;
  gap: 1.5rem;
}

/* ==========================
   FILTER BUTTON
========================== */

.filter-dropdown {
  position: relative;
}

.filter-btn {
  background: #fff;
  border: 1px solid rgba(0,0,0,0.15);
  padding: 9px 18px;
  border-radius: 40px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 6px;
  transition: all .25s ease;
}

/* Focus accessibility */
.filter-btn:focus-visible,
.sort-select:focus-visible {
  outline: 2px solid #000;
  outline-offset: 3px;
}

/* Hover */
.filter-btn:hover {
  border-color: #000;
  transform: translateY(-2px);
}

/* Arrow */
.arrow {
  width: 6px;
  height: 6px;
  border-right: 2px solid #000;
  border-bottom: 2px solid #000;
  transform: rotate(45deg);
  transition: transform .3s ease;
}

.filter-dropdown.active .arrow {
  transform: rotate(-135deg);
}

/* Dropdown */
.filter-content {
  position: absolute;
  top: 120%;
  left: 0;
  background: #fff;
  padding: 1.3rem;
  border-radius: 16px;
  box-shadow: 0 25px 70px rgba(0,0,0,0.12);
  opacity: 0;
  visibility: hidden;
  transform: translateY(8px);
  transition: .25s ease;
  z-index: 100;
}

.filter-dropdown.active .filter-content {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.filter-option {
  display: block;
  margin-bottom: 8px;
  font-size: 13px;
  cursor: pointer;
}

/* ==========================
   SORT
========================== */

.sort-select {
  appearance: none;
  border-radius: 40px;
  padding: 9px 30px 9px 14px;
  border: 1px solid rgba(0,0,0,0.15);
  background: #f7f5f2;
  cursor: pointer;
  transition: .25s ease;
}

.sort-select:hover {
  border-color: #000;
}

/* ==========================
   ACTIVE FILTER PILLS
========================== */

.active-filters {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
  padding: 1rem 0;
}

.active-pill {
  background: #000;
  color: #fff;
  padding: 6px 14px;
  border-radius: 40px;
  font-size: 12px;
  text-decoration: none;
  transition: .25s ease;
}

.active-pill:hover {
  background: #222;
}

.clear-all {
  padding: 6px 14px;
  border-radius: 40px;
  border: 1px solid #000;
  text-decoration: none;
  font-size: 12px;
  transition: .25s ease;
}

.clear-all:hover {
  background: #000;
  color: #fff;
}

/* ==========================
   DARK MODE
========================== */

@media (prefers-color-scheme: dark) {
  .collection-toolbar {
    border-color: rgba(255,255,255,0.1);
  }

  .filter-btn,
  .sort-select {
    background: #111;
    border-color: rgba(255,255,255,0.2);
    color: #fff;
  }

  .filter-content {
    background: #1a1a1a;
    color: #fff;
  }

  .active-pill {
    background: #fff;
    color: #000;
  }
}

/* ==========================
   MOBILE SLIDE-IN
========================== */

@media (max-width: 768px) {

  .filters-left {
    display: none;
  }

  .mobile-filter-btn {
    display: inline-block;
  }

}

</style>
