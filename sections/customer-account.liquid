<section class="customer-account">
  <div class="customer-account__container">
    <aside class="account-sidebar">
      <h2 class="account-sidebar__title">{{ customer.first_name }}'s Account</h2>
      <nav class="account-nav">
        <a href="{{ routes.account_url }}" class="account-nav__link">Dashboard</a>
        <a href="{{ routes.account_addresses_url }}" class="account-nav__link">Addresses</a>
        <a href="{{ routes.account_url }}?logout=true" class="account-nav__link">Log Out</a>
      </nav>
    </aside>

    <main class="account-main">
      <h1 class="account-main__title">Welcome Back, {{ customer.first_name }}</h1>
      
      <!-- Account Info -->
      <section class="account-section">
        <h2 class="account-section__title">Account Information</h2>
        <div class="account-info">
          <p><strong>Email:</strong> {{ customer.email }}</p>
          <p><strong>Name:</strong> {{ customer.first_name }} {{ customer.last_name }}</p>
        </div>
      </section>

      <!-- Recent Orders -->
      <section class="account-section">
        <h2 class="account-section__title">Recent Orders</h2>
        {% if customer.orders.size > 0 %}
          <table class="orders-table">
            <thead>
              <tr>
                <th>Order Number</th>
                <th>Date</th>
                <th>Total</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              {% for order in customer.orders limit: 5 %}
                <tr>
                  <td><a href="{{ order.customer_url }}">#{{ order.order_number }}</a></td>
                  <td>{{ order.created_at | date: "%b %d, %Y" }}</td>
                  <td>{{ order.total_price | money }}</td>
                  <td><span class="badge badge--{{ order.fulfillment_status | default: 'pending' }}">{{ order.financial_status }}</span></td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        {% else %}
          <p>No orders yet.</p>
        {% endif %}
      </section>
    </main>
  </div>
</section>

{% schema %}
{
  "name": "Customer Account"
}
{% endschema %}

<style>
.customer-account {
  padding: 2rem 1.5rem;
  background: #f9f9f9;
  min-height: calc(100vh - 300px);
}

.customer-account__container {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 200px 1fr;
  gap: 2rem;
}

.account-sidebar {
  background: white;
  padding: 1.5rem;
  border-radius: 4px;
  height: fit-content;
}

.account-sidebar__title {
  font-size: 1rem;
  font-weight: 700;
  margin: 0 0 1rem 0;
}

.account-nav {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.account-nav__link {
  color: var(--color-text);
  text-decoration: none;
  padding: 0.5rem 0;
  border-bottom: 1px solid #eee;
  font-size: 0.875rem;
}

.account-nav__link:hover {
  color: var(--color-accent);
}

.account-main {
  background: white;
  padding: 2rem;
  border-radius: 4px;
}

.account-main__title {
  font-size: 1.75rem;
  font-weight: 700;
  margin: 0 0 2rem 0;
  font-family: 'Playfair Display', serif;
}

.account-section {
  margin-bottom: 2rem;
}

.account-section__title {
  font-size: 1.125rem;
  font-weight: 700;
  margin: 0 0 1rem 0;
  border-bottom: 1px solid #eee;
  padding-bottom: 0.5rem;
}

.account-info p {
  margin: 0.5rem 0;
  font-size: 0.875rem;
}

.orders-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 0.875rem;
}

.orders-table th {
  text-align: left;
  padding: 0.75rem;
  border-bottom: 2px solid #eee;
  font-weight: 600;
}

.orders-table td {
  padding: 0.75rem;
  border-bottom: 1px solid #eee;
}

.badge {
  display: inline-block;
  padding: 0.25rem 0.5rem;
  border-radius: 2px;
  font-size: 0.75rem;
  background: #eee;
}

.badge--completed {
  background: #d4edda;
  color: #155724;
}

.badge--pending {
  background: #fff3cd;
  color: #856404;
}

@media (max-width: 768px) {
  .customer-account__container {
    grid-template-columns: 1fr;
  }

  .account-sidebar {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
}
</style>
