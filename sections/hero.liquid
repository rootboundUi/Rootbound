<section class="lux-hero">
  <div class="lux-hero__media">
    {% if section.settings.image != blank %}
      <img
        src="{{ section.settings.image | image_url: width: 2400 }}"
        srcset="
          {{ section.settings.image | image_url: width: 768 }} 768w,
          {{ section.settings.image | image_url: width: 1200 }} 1200w,
          {{ section.settings.image | image_url: width: 1800 }} 1800w,
          {{ section.settings.image | image_url: width: 2400 }} 2400w
        "
        sizes="100vw"
        alt="{{ section.settings.title | escape }}"
        class="lux-hero__image"
        loading="lazy"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
      >
    {% endif %}
    <div class="lux-hero__overlay"></div>
  </div>

  <div class="lux-hero__content lux-align-{{ section.settings.text_alignment }}">
    <div class="lux-hero__inner">
      <h1 class="lux-hero__title">{{ section.settings.title }}</h1>
      <p class="lux-hero__subtitle">{{ section.settings.subtitle }}</p>

      {% if section.settings.cta_text != blank %}
        <a href="{{ section.settings.cta_link }}" class="lux-button">
          {{ section.settings.cta_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Wear Your Authentic Self"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Contemporary streetwear for the authentic individual"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Explore Collection"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "default": 500
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

<style>
/* ============================= */
/* PREMIUM FULLSCREEN HERO */
/* ============================= */

.lux-hero {
  position: relative;
  height: 100vh;
  min-height: 600px;
  width: 100%;
  overflow: hidden;
}

/* Image Container */
.lux-hero__media {
  position: absolute;
  inset: 0;
  overflow: hidden;
}

/* Parallax Image */
.lux-hero__image {
  width: 100%;
  height: 120%;
  object-fit: cover;
  object-position: center;
  transform: translateY(-10%);
  will-change: transform;
}

/* Soft Luxury Overlay */
.lux-hero__overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to bottom,
    rgba(15,15,15,0.55),
    rgba(15,15,15,0.35),
    rgba(15,15,15,0.55)
  );
}

/* ============================= */
/* CONTENT */
/* ============================= */

.lux-hero__content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 2rem;
}

.lux-hero__inner {
  max-width: 900px;
  color: #f8f6f2;
}

/* Alignment */
.lux-align-left { justify-content: flex-start; text-align: left; }
.lux-align-center { justify-content: center; text-align: center; }
.lux-align-right { justify-content: flex-end; text-align: right; }

/* ============================= */
/* TYPOGRAPHY */
/* ============================= */

.lux-hero__inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  max-width: 820px;
  margin: 0 auto;
}

.lux-hero__title {
  font-family: 'Playfair Display', serif;
  font-size: clamp(2.6rem, 3.8vw, 3.6rem);
  font-weight: 500;
  line-height: 1.2;
  letter-spacing: -0.02em;
  margin-bottom: 1.2rem;
  color: #ffffff;
  max-width: 750px; /* controls wrapping elegantly */
}

.lux-hero__subtitle {
  font-family: 'Inter', sans-serif;
  font-size: clamp(1rem, 1.4vw, 1.15rem);
  margin-bottom: 2.2rem;
  color: rgba(255,255,255,0.9);
  max-width: 520px;
}
.lux-hero__title,
.lux-hero__subtitle,
.lux-button {
  opacity: 0;
  transform: translateY(25px);
}

.lux-hero__title {
  animation: luxFadeUp 1s cubic-bezier(.22,.61,.36,1) forwards;
}

.lux-hero__subtitle {
  animation: luxFadeUp 1s cubic-bezier(.22,.61,.36,1) 0.2s forwards;
}

.lux-button {
  animation: luxFadeUp 1s cubic-bezier(.22,.61,.36,1) 0.4s forwards;
}

@keyframes luxFadeUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ============================= */
/* BUTTON */
/* ============================= */

.lux-button {
  display: inline-block;
  padding: 1rem 2.4rem;
  font-size: 0.75rem;
  letter-spacing: 0.18em;
  text-transform: uppercase;
  border: 1px solid #e6a38f;
  background: #e6a38f;
  color: #fff;
  text-decoration: none;
  transition: all 0.4s ease;
}

.lux-button:hover {
  background: transparent;
  color: #e6a38f;
  transform: translateY(-3px);
}
.lux-button {
  transition: all 0.5s cubic-bezier(.22,.61,.36,1);
}

.lux-button:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 30px rgba(0,0,0,0.25);
}

/* ============================= */
/* PARALLAX EFFECT */
/* ============================= */

@media (min-width: 768px) {
  .lux-hero__image {
    animation: parallaxMove 20s ease-in-out infinite alternate;
  }

  @keyframes parallaxMove {
    from { transform: translateY(-8%); }
    to { transform: translateY(-2%); }
  }
}

/* ============================= */
/* MOBILE OPTIMIZATION */
/* ============================= */
@media (max-width: 768px) {

  .lux-hero {
    height: 50vh;
    min-height: 640px;
    position: relative;
  }

  .lux-hero__media {
    position: absolute;
    inset: 0;
  }

  .lux-hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 30%;
  }

  /* Luxury bottom fade only */
  .lux-hero__overlay {
    background: linear-gradient(
      to bottom,
      rgba(0,0,0,0.05) 0%,
      rgba(0,0,0,0.15) 40%,
      rgba(0,0,0,0.75) 100%
    );
  }

  .lux-hero__content {
    position: relative;
    z-index: 3;
    height: 100%;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding: 0 2rem 6rem;
  }

  .lux-hero__inner {
    text-align: center;
    max-width: 320px;   /* KEY: tight editorial width */
  }

  /* Refined luxury typography */
  .lux-hero__title {
    font-size: 1.65rem;
    line-height: 1.28;
    font-weight: 500;
    letter-spacing: -0.015em;
    margin-bottom: 0.9rem;
  }

  .lux-hero__subtitle {
    font-size: 0.92rem;
    line-height: 1.5;
    opacity: 0.85;
    margin-bottom: 2.2rem;
  }

  .lux-button {
    padding: 0.85rem 2.2rem;
    font-size: 0.68rem;
    letter-spacing: 0.22em;
    text-transform: uppercase;
    border-radius: 2px;
  }
}

/* ================================= */
/* CINEMATIC ZOOM */
/* ================================= */

.lux-hero__image {
  animation: luxZoom 18s ease-in-out infinite alternate;
  transform-origin: center;
}

@keyframes luxZoom {
  from { transform: scale(1); }
  to   { transform: scale(1.06); }
}

</style>
