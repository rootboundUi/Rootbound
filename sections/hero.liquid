<section class="lux-hero">
  <div class="lux-hero__media">
    {% if section.settings.image != blank %}
      <img
        src="{{ section.settings.image | image_url: width: 2400 }}"
        srcset="
          {{ section.settings.image | image_url: width: 768 }} 768w,
          {{ section.settings.image | image_url: width: 1200 }} 1200w,
          {{ section.settings.image | image_url: width: 1800 }} 1800w,
          {{ section.settings.image | image_url: width: 2400 }} 2400w
        "
        sizes="100vw"
        alt="{{ section.settings.title | escape }}"
        class="lux-hero__image"
        loading="lazy"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
      >
    {% endif %}
    <div class="lux-hero__overlay"></div>
  </div>

  <div class="lux-hero__content lux-align-{{ section.settings.text_alignment }}">
    <div class="lux-hero__inner">
      <h1 class="lux-hero__title">{{ section.settings.title }}</h1>
      <p class="lux-hero__subtitle">{{ section.settings.subtitle }}</p>

      {% if section.settings.cta_text != blank %}
        <a href="{{ section.settings.cta_link }}" class="lux-button">
          {{ section.settings.cta_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Wear Your Authentic Self"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Contemporary streetwear for the authentic individual"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Explore Collection"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "default": 500
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

<style>
/* ============================= */
/* PREMIUM FULLSCREEN HERO */
/* ============================= */

.lux-hero {
  position: relative;
  height: 100vh;
  min-height: 600px;
  width: 100%;
  overflow: hidden;
}

/* Image Container */
.lux-hero__media {
  position: absolute;
  inset: 0;
  overflow: hidden;
}

/* Parallax Image */
.lux-hero__image {
  width: 100%;
  height: 120%;
  object-fit: cover;
  object-position: center;
  transform: translateY(-10%);
  will-change: transform;
}

/* Soft Luxury Overlay */
.lux-hero__overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to bottom,
    rgba(15,15,15,0.55),
    rgba(15,15,15,0.35),
    rgba(15,15,15,0.55)
  );
}

/* ============================= */
/* CONTENT */
/* ============================= */

.lux-hero__content {
  position: absolute;
  z-index: 2;
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 2rem;
}

.lux-hero__inner {
  max-width: 900px;
  color: #f8f6f2;
}

/* Alignment */

.lux-align-center { justify-content: center; text-align: center; }


/* ============================= */
/* TYPOGRAPHY */
/* ============================= */

.lux-hero__title {
  font-family: 'Playfair Display', serif;
  font-size: clamp(2.4rem, 4.5vw, 4rem);
  font-weight: 500;
  line-height: 1.15;
  margin-bottom: 1.2rem;
  letter-spacing: -0.02em;
  animation: fadeUp 1s ease forwards;
}

.lux-hero__subtitle {
  font-family: 'Inter', sans-serif;
  font-size: clamp(1rem, 1.5vw, 1.2rem);
  max-width: 600px;
  margin-bottom: 2.5rem;
  opacity: 0.9;
  animation: fadeUp 1.2s ease forwards;
}

/* ============================= */
/* BUTTON */
/* ============================= */

.lux-button {
  display: inline-block;
  padding: 1rem 2.4rem;
  font-size: 0.75rem;
  letter-spacing: 0.18em;
  text-transform: uppercase;
  border: 1px solid #e6a38f;
  background: #e6a38f;
  color: #fff;
  text-decoration: none;
  transition: all 0.4s ease;
}

.lux-button:hover {
  background: transparent;
  color: #e6a38f;
  transform: translateY(-3px);
}

/* ============================= */
/* PARALLAX EFFECT */
/* ============================= */

@media (min-width: 768px) {
  .lux-hero__image {
    animation: parallaxMove 20s ease-in-out infinite alternate;
  }

  @keyframes parallaxMove {
    from { transform: translateY(-8%); }
    to { transform: translateY(-2%); }
  }
}

/* ============================= */
/* MOBILE OPTIMIZATION */
/* ============================= */

@media (max-width: 768px) {

  .lux-hero {
    height: 85vh;
    min-height: 500px;
  }

  .lux-hero__image {
    height: 100%;
    object-position: center top; /* prevents head cropping */
    transform: none;
  }

  .lux-hero__content {
    align-items: flex-end;
    padding-bottom: 3rem;
  }

  .lux-hero__title {
    font-size: 2rem;
    line-height: 1.25;
  }

  .lux-hero__subtitle {
    font-size: 1rem;
  }

  .lux-button {
    padding: 0.9rem 2rem;
  }
}

/* ============================= */
/* ANIMATION */
/* ============================= */

@keyframes fadeUp {
  from {
    opacity: 0;
    transform: translateY(25px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}


</style>
