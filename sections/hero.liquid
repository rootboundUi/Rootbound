<section class="hero">
  <div class="hero__content" style="background-image: url('{{ section.settings.image | image_url: width: 1920 }}');">
    <div class="hero__overlay"></div>
    <div class="hero__text">
      <h1 class="hero__title">{{ section.settings.title }}</h1>
      <p class="hero__subtitle">{{ section.settings.subtitle }}</p>
      {% if section.settings.cta_text != blank %}
        <a href="{{ section.settings.cta_link }}" class="button button--primary">
          {{ section.settings.cta_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Wear Your Authentic Self"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Contemporary streetwear for the authentic individual"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Explore Collection"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "default": 500
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

