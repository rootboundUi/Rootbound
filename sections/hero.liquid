<section class="hero">
  <div class="hero__content" style="background-image: url('{{ section.settings.image | image_url: width: 1920 }}');">
    <div class="hero__overlay"></div>
    <div class="hero__text">
      <h1 class="hero__title">{{ section.settings.title }}</h1>
      <p class="hero__subtitle">{{ section.settings.subtitle }}</p>
      {% if section.settings.cta_text != blank %}
        <a href="{{ section.settings.cta_link }}" class="button button--primary">
          {{ section.settings.cta_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Wear Your Authentic Self"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Contemporary streetwear for the authentic individual"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Explore Collection"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "default": 500
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

<style>
/* ============================= */
/* ROOTBOUND HERO - FIXED CLEAN */
/* ============================= */

.hero {
  position: relative;
  overflow: hidden;
}

/* Background Container */
.hero__content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: {{ section.settings.height }}px;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  padding: 0 1.5rem; /* Prevent mobile edge cut */
}

/* Luxury Dark Overlay */
.hero__overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to bottom,
    rgba(20,20,20,0.55),
    rgba(20,20,20,0.35),
    rgba(20,20,20,0.45)
  );
}

/* Text Container */
.hero__text {
  position: relative;
  z-index: 2;
  text-align: {{ section.settings.text_alignment }};
  color: #f8f6f2;
  max-width: 900px;
  width: 100%;
}

/* ============================= */
/* TYPOGRAPHY */
/* ============================= */

/* FIXED: removed nowrap */
.hero__title {
  font-family: 'Playfair Display', serif;
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 600;
  line-height: 1.2;
  margin-bottom: 1rem;
  letter-spacing: -0.02em;
  word-break: break-word;
}

/* Subtitle */
.hero__subtitle {
  font-family: 'Inter', sans-serif;
  font-size: clamp(1rem, 2vw, 1.2rem);
  font-weight: 400;
  opacity: 0.9;
  margin-bottom: 2rem;
  max-width: 650px;
}

/* ============================= */
/* BUTTON */
/* ============================= */

.button {
  display: inline-block;
  padding: 0.9rem 2.2rem;
  font-family: 'Inter', sans-serif;
  font-weight: 500;
  text-decoration: none;
  text-transform: uppercase;
  letter-spacing: 0.12em;
  font-size: 0.8rem;
  border-radius: 2px;
  transition: all 0.35s ease;
}

.button--primary {
  background: #e6a38f;
  border: 1px solid #e6a38f;
  color: #ffffff;
}

.button--primary:hover {
  background: transparent;
  color: #e6a38f;
  border-color: #e6a38f;
  transform: translateY(-2px);
}

/* ============================= */
/* SMOOTH FADE ANIMATION */
/* ============================= */

.hero__title,
.hero__subtitle,
.button {
  opacity: 0;
  transform: translateY(20px);
  animation: fadeUp 0.9s ease forwards;
}

.hero__subtitle { animation-delay: 0.2s; }
.button { animation-delay: 0.4s; }

@keyframes fadeUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ============================= */
/* MOBILE FIX */
/* ============================= */

@media (max-width: 768px) {

  .hero__content {
    min-height: 420px; /* Balanced height */
    padding: 0 1.2rem;
  }

  .hero__text {
    text-align: center;
  }

  .hero__title {
    font-size: 1.9rem;
    line-height: 1.3;
  }

  .hero__subtitle {
    font-size: 1rem;
  }

  .button {
    padding: 0.8rem 1.8rem;
  }
}

</style>
