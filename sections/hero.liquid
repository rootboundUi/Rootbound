<section class="lux-hero">
  <div class="lux-hero__media">
    {% if section.settings.image != blank %}
      <img
        src="{{ section.settings.image | image_url: width: 2400 }}"
        srcset="
          {{ section.settings.image | image_url: width: 768 }} 768w,
          {{ section.settings.image | image_url: width: 1200 }} 1200w,
          {{ section.settings.image | image_url: width: 1800 }} 1800w,
          {{ section.settings.image | image_url: width: 2400 }} 2400w
        "
        sizes="100vw"
        alt="{{ section.settings.title | escape }}"
        class="lux-hero__image"
        loading="lazy"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
      >
    {% endif %}
    <div class="lux-hero__overlay"></div>
  </div>

  <div class="lux-hero__content lux-align-{{ section.settings.text_alignment }}">
    <div class="lux-hero__inner">
      <h1 class="lux-hero__title">{{ section.settings.title }}</h1>
      <p class="lux-hero__subtitle">{{ section.settings.subtitle }}</p>

      {% if section.settings.cta_text != blank %}
        <a href="{{ section.settings.cta_link }}" class="lux-button">
          {{ section.settings.cta_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Wear Your Authentic Self"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Contemporary streetwear for the authentic individual"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Explore Collection"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "default": 500
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

<style>
/* ============================= */
/* PREMIUM HERO FIXED */
/* ============================= */

.lux-hero {
  position: relative;
  width: 100%;
  overflow: hidden;
}

/* ============================= */
/* DESKTOP (Luxury Full Screen) */
/* ============================= */

@media (min-width: 769px) {

  .lux-hero {
    height: 100vh;
    min-height: 650px;
  }

  .lux-hero__media {
    position: absolute;
    inset: 0;
  }

  .lux-hero__image {
    width: 100%;
    height: 120%;
    object-fit: cover;
    transform: translateY(-8%);
    animation: parallaxMove 20s ease-in-out infinite alternate;
  }

  .lux-hero__content {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    align-items: center;
    padding: 0 3rem;
  }

  @keyframes parallaxMove {
    from { transform: translateY(-10%); }
    to { transform: translateY(-2%); }
  }
}

/* ============================= */
/* MOBILE (NO CUTTING) */
/* ============================= */

@media (max-width: 768px) {

  .lux-hero {
    display: flex;
    flex-direction: column;
  }

  /* Image becomes natural height */
  .lux-hero__media {
    position: relative;
    width: 100%;
  }

  .lux-hero__image {
    width: 100%;
    height: auto;          /* KEY FIX */
    object-fit: contain;   /* prevents cropping */
    transform: none;
  }

  .lux-hero__overlay {
    background: rgba(0,0,0,0.35);
  }

  /* Text moves BELOW image */
  .lux-hero__content {
    position: relative;
    padding: 2rem 1.5rem 3rem;
    display: flex;
    justify-content: center;
  }

  .lux-hero__inner {
    text-align: center;
    width: 100%;
  }

  .lux-hero__title {
    font-size: 1.9rem;
    line-height: 1.3;
  }

  .lux-hero__subtitle {
    font-size: 1rem;
    margin: 1rem 0 2rem;
  }
}

/* ============================= */
/* GLOBAL STYLES */
/* ============================= */

.lux-hero__overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to bottom,
    rgba(15,15,15,0.55),
    rgba(15,15,15,0.35),
    rgba(15,15,15,0.55)
  );
}

.lux-align-left { justify-content: flex-start; text-align: left; }
.lux-align-center { justify-content: center; text-align: center; }
.lux-align-right { justify-content: flex-end; text-align: right; }

.lux-hero__title {
  font-family: 'Playfair Display', serif;
  font-weight: 600;
  letter-spacing: -0.02em;
}

.lux-hero__subtitle {
  font-family: 'Inter', sans-serif;
  opacity: 0.9;
}



</style>
