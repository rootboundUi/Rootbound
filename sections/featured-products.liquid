<section class="featured-products">
  <div class="featured-products__container">
    <div class="featured-products__header">
      <h2 class="featured-products__title">{{ section.settings.title }}</h2>
      {% if section.settings.subtitle %}
        <p class="featured-products__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="featured-products__grid">
      {% for product in section.settings.collection.products limit: section.settings.products_count %}
        {% render 'product-card', product: product %}
      {% endfor %}
    </div>

    {% if section.settings.show_view_all %}
      <div class="featured-products__footer">
        <a href="{{ section.settings.collection.url }}" class="button button--primary">
          View All Products
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_count",
      "label": "Number of Products",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Link",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}

<style>
.featured-products {
  padding: 4rem 1.5rem;
  background: #f9f9f9;
}

.featured-products__container {
  max-width: 1440px;
  margin: 0 auto;
}

.featured-products__header {
  text-align: center;
  margin-bottom: 3rem;
}

.featured-products__title {
  font-size: 2rem;
  font-weight: 700;
  margin: 0 0 1rem 0;
  color: var(--color-text);
  font-family: 'Playfair Display', serif;
}

.featured-products__subtitle {
  font-size: 1rem;
  color: #666;
  margin: 0;
}

.featured-products__grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 2rem;
  margin-bottom: 2rem;
}

.featured-products__footer {
  text-align: center;
}

@media (max-width: 768px) {
  .featured-products {
    padding: 2rem 1.5rem;
  }

  .featured-products__grid {
    gap: 1.5rem;
  }

  .featured-products__title {
    font-size: 1.5rem;
  }
}
</style>
